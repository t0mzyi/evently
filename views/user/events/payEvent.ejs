      to {
        transform: scale(4);
        opacity: 0;
      }
    }

    .error-cross {
      stroke-dasharray: 50;
      stroke-dashoffset: 50;
    }

    .payment-loader {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(26, 42, 58, 0.85);
      z-index: 1000;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      color: white;
      font-family: 'Inter', sans-serif;
    }

    .spinner {
      width: 60px;
      height: 60px;
      border: 5px solid rgba(255, 255, 255, 0.3);
      border-top: 5px solid white;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-bottom: 20px;
    }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }

    .confetti {
      position: absolute;
      width: 15px;
      height: 15px;
      background-color: #f00;
      border-radius: 0;
    }

    .wallet-balance-card {
      position: relative;
      overflow: hidden;
      transition: all 0.3s ease;
    }

    .wallet-balance-card::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(212, 167, 106, 0.15) 0%, rgba(212, 167, 106, 0) 70%);
      z-index: 0;
    }

    .wallet-balance-amount {
      position: relative;
      z-index: 1;
      animation: balance-pulse 2s infinite;
    }

    .amount-updating {
      animation: amount-update 0.4s ease-out;
    }

    .fee-item {
      transition: all 0.3s ease;
    }

    .fee-item:hover {
      background-color: rgba(234, 224, 207, 0.3);
    }

    .total-highlight {
      position: relative;
      overflow: hidden;
    }

    .total-highlight::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(212, 167, 106, 0.2), transparent);
      transform: translateX(-100%);
      transition: transform 0.5s ease;
    }

    .total-highlight.update::after {
      transform: translateX(100%);
    }

    .insufficient-balance {
      background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%) !important;
      border-color: #fecaca !important;
    }

    .insufficient-warning {
      color: #EF4444;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 8px;
      margin-top: 8px;
      animation: float 2s ease-in-out infinite;
    }

    .error-swirl {
      position: absolute;
      width: 120px;
      height: 120px;
      display: flex;
      justify-content: center;
      align-items: center;
      color: #EF4444;
      font-weight: bold;
      font-size: 1.5rem;
      animation: error-swirl 0.8s ease-out;
      z-index: 60;
      pointer-events: none;
    }

    .wallet-pay-button:disabled {
      background: #9CA3AF;
      cursor: not-allowed;
      transform: none !important;
      box-shadow: none !important;
    }

    .wallet-pay-button:disabled:hover {
      transform: none !important;
    }
  </style>
</head>

