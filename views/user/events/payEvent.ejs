  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // DOM Elements
      const walletPayButton = document.getElementById('wallet-pay-button');
      const paymentLoader = document.getElementById('payment-loader');
      const successModal = document.getElementById('success-modal');
      const errorModal = document.getElementById('error-modal');
      const doneBtn = document.getElementById('done-btn');
      const tryAgainBtn = document.getElementById('try-again-btn');
      const viewEventBtn = document.getElementById('view-event-btn');
      const paymentMethodUsed = document.getElementById('payment-method-used');
      const transactionIdElement = document.getElementById('transaction-id');

      // Auto-calculation elements
      const venueFeeElement = document.getElementById('venue-fee');
      const creationFeeElement = document.getElementById('creation-fee');
      const totalDueElement = document.getElementById('total-due');
      const totalContainer = document.getElementById('total-container');
      const walletAmountDueElement = document.getElementById('wallet-amount-due');
      const walletPayAmountElement = document.getElementById('wallet-pay-amount');
      const successAmountElement = document.getElementById('success-amount');

      // Wallet elements
      const walletBalanceDisplay = document.getElementById('wallet-balance-display');
      const remainingBalanceElement = document.getElementById('remaining-balance');
      const walletBalanceCard = document.getElementById('wallet-balance-card');
      const eventNameElement = document.getElementById('event-name');

      // Helper function to safely convert strings to numbers
      function safeParseFloat(value) {
        if (typeof value === 'number') return value;
        if (typeof value === 'string') {
          const cleaned = value.replace(/[^\d.-]/g, '');
          const num = parseFloat(cleaned);
          return isNaN(num) ? 0 : num;
        }
        return 0;
      }

      // Payment values (passed from backend as STRINGS)
      const venueFee = safeParseFloat(<%- JSON.stringify(details.venueFee) %>);
      const creationFee = safeParseFloat(<%- JSON.stringify(details.eventFee) %>);
      let walletBalance = safeParseFloat(<%- JSON.stringify(details.walletBalance) %>);
      const eventName = <%- JSON.stringify(details.event.title) %>;
      const eventId = <%- JSON.stringify(details.event._id) %>;

      // Set event name
      eventNameElement.textContent = eventName;

      // Calculate total function (venue + creation, no tax)
      function calculateTotal() {
        return venueFee + creationFee;
      }

      // Format currency function
      function formatCurrency(amount) {
        const numAmount = typeof amount === 'number' ? amount : parseFloat(amount);
        return `$${numAmount.toFixed(2)}`;
      }

      // Check if wallet has sufficient balance
      function hasSufficientBalance() {
        return walletBalance >= calculateTotal();
      }

      // Update all amount displays
      function updateAmountDisplays() {
        const total = calculateTotal();

        [totalDueElement, walletAmountDueElement, walletPayAmountElement].forEach(el => {
          if (el) {
            el.classList.add('amount-updating');
            setTimeout(() => el.classList.remove('amount-updating'), 400);
          }
        });

        totalContainer.classList.add('update');
        setTimeout(() => totalContainer.classList.remove('update'), 500);

        venueFeeElement.textContent = formatCurrency(venueFee);
        creationFeeElement.textContent = formatCurrency(creationFee);
        totalDueElement.textContent = formatCurrency(total);
        walletAmountDueElement.textContent = formatCurrency(total);
        walletPayAmountElement.textContent = formatCurrency(total);
        successAmountElement.textContent = formatCurrency(total);

        const remainingBalance = walletBalance - total;
        remainingBalanceElement.textContent = formatCurrency(remainingBalance);
        walletBalanceDisplay.textContent = formatCurrency(walletBalance);

        updateWalletBalanceState();
        return total;
      }

      // Update wallet UI state based on balance sufficiency
      function updateWalletBalanceState() {
        const total = calculateTotal();
        const isSufficient = hasSufficientBalance();

        walletBalanceCard.classList.remove('insufficient-balance');
        walletPayButton.disabled = false;

        let warningElement = document.getElementById('balance-warning');
        if (warningElement) warningElement.remove();

        if (!isSufficient) {
          walletBalanceCard.classList.add('insufficient-balance');
          walletPayButton.disabled = true;

          warningElement = document.createElement('div');
          warningElement.id = 'balance-warning';
          warningElement.className = 'insufficient-warning mt-4 text-center';
          warningElement.innerHTML = `
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            Insufficient balance. Need ${formatCurrency(total - walletBalance)} more.
          `;
          walletBalanceCard.querySelector('.mt-6').parentNode.insertBefore(warningElement, walletBalanceCard.querySelector('.mt-6'));

          showErrorSwirl("Insufficient wallet balance!");
        }
      }

      // Show error swirl animation
      function showErrorSwirl(message) {
        document.querySelectorAll('.error-swirl').forEach(el => el.remove());
        const swirl = document.createElement('div');
        swirl.className = 'error-swirl fixed inset-0 flex items-center justify-center';
        swirl.innerHTML = `
          <div class="text-center bg-white/90 backdrop-blur-sm rounded-2xl p-6 shadow-xl border-2 border-[#EF4444]/30 max-w-xs mx-4">
            <div class="flex justify-center mb-3">
              <svg class="w-12 h-12 text-[#EF4444]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <p class="font-bold text-lg text-[#EF4444]">${message}</p>
          </div>
        `;
        document.body.appendChild(swirl);
        setTimeout(() => {
          swirl.style.opacity = '0';
          swirl.style.transform = 'scale(0.8)';
          setTimeout(() => {
            if (document.body.contains(swirl)) document.body.removeChild(swirl);
          }, 300);
        }, 2000);
      }

      // Initialize amounts
      const totalAmount = updateAmountDisplays();

      // ✅ WALLET PAYMENT HANDLER WITH AJAX POST
      walletPayButton.addEventListener('click', async function(e) {
        e.preventDefault();

        // Final balance check
        if (!hasSufficientBalance()) {
          showErrorSwirl("Insufficient wallet balance!");
          showErrorModal(`Your wallet balance (${formatCurrency(walletBalance)}) is less than the total amount due (${formatCurrency(calculateTotal())}).`);
          return;
        }

        // Show loader
        paymentLoader.style.display = 'flex';

        try {
          // ✅ AJAX POST REQUEST TO SERVER
          const response = await fetch('/payAndPublish', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-Requested-With': 'XMLHttpRequest' // Optional: for server-side detection
            },
            body: JSON.stringify({
              eventId: eventId,
              amount: calculateTotal(),
              venueFee: venueFee,
              eventFee: creationFee
            })
          });

          const result = await response.json();

          // Hide loader
          paymentLoader.style.display = 'none';

          if (response.ok && result.success) {
            // Update UI with new balance
            walletBalance = result.newBalance;
            walletBalanceDisplay.textContent = formatCurrency(walletBalance);
            remainingBalanceElement.textContent = formatCurrency(walletBalance - calculateTotal());

            // Update success modal
            transactionIdElement.textContent = result.transactionId || 'TXN-' + Date.now();
            paymentMethodUsed.textContent = 'Wallet';

            // Show success
            showSuccessModal();
          } else {
            // Handle known errors
            const errorMessage = result.message || 'Payment processing failed. Please try again.';
            showErrorModal(errorMessage);
          }
        } catch (error) {
          // Hide loader
          paymentLoader.style.display = 'none';

          // Handle network errors
          console.error('Payment error:', error);
          showErrorModal('Network error. Please check your connection and try again.');
        }
      });

      // Modal handlers
      doneBtn.addEventListener('click', () => {
        successModal.classList.add('hidden');
        window.location.href = '/events';
      });

      viewEventBtn.addEventListener('click', () => {
        successModal.classList.add('hidden');
        window.location.href = `/events/${eventId}`;
      });

      tryAgainBtn.addEventListener('click', () => {
        errorModal.classList.add('hidden');
      });

      // Close modals on outside click
      [successModal, errorModal].forEach(modal => {
        modal.addEventListener('click', (e) => {
          if (e.target === modal) {
            modal.classList.add('hidden');
            if (modal === successModal) {
              window.location.href = '/my-events';
            }
          }
        });
      });

      // Success modal with animation
      function showSuccessModal() {
        createConfetti();
        successModal.classList.remove('hidden');

        const paths = successModal.querySelectorAll('.checkmark-path');
        paths.forEach(path => {
          const length = path.getTotalLength();
          path.style.strokeDasharray = length;
          path.style.strokeDashoffset = length;
        });

        setTimeout(() => {
          paths.forEach(path => {
            path.style.transition = 'stroke-dashoffset 0.5s ease-out';
            path.style.strokeDashoffset = '0';
          });
        }, 100);
      }

      // Error modal
      function showErrorModal(message) {
        document.getElementById('error-message-text').innerText = message;
        errorModal.classList.remove('hidden');

        const cross = errorModal.querySelector('.error-cross');
        if (cross) {
          const length = cross.getTotalLength();
          cross.style.strokeDasharray = length;
          cross.style.strokeDashoffset = length;
          cross.getBoundingClientRect();
          cross.style.transition = 'stroke-dashoffset 0.4s ease-out';
          cross.style.strokeDashoffset = '0';
        }
      }

      // Confetti animation
      function createConfetti() {
        const colors = ['#10B981', '#3B82F6', '#8B5CF6', '#EC4899', '#F59E0B', '#D4A76A'];
        const confettiCount = 150;
        const confettiContainer = document.createElement('div');
        confettiContainer.className = 'fixed inset-0 pointer-events-none z-50';
        document.body.appendChild(confettiContainer);

        for (let i = 0; i < confettiCount; i++) {
          const confetti = document.createElement('div');
          confetti.className = 'confetti';
          confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
          const size = Math.random() * 10 + 5;
          confetti.style.width = `${size}px`;
          confetti.style.height = `${size}px`;
          confetti.style.borderRadius = Math.random() > 0.5 ? '50%' : '0';
          const startX = Math.random() * 100;
          const startY = Math.random() * 20 - 20;
          confetti.style.left = `${startX}%`;
          confetti.style.top = `${startY}%`;
          const rotation = Math.random() * 360;
          confetti.style.transform = `rotate(${rotation}deg)`;
          confettiContainer.appendChild(confetti);

          const duration = Math.random() * 3 + 2;
          const endX = startX + (Math.random() - 0.5) * 30;
          const endY = Math.random() * 100 + 100;

          confetti.animate([{
              transform: `translate(0, 0) rotate(${rotation}deg)`,
              opacity: 1
            },
            {
              transform: `translate(${(endX - startX)}%, ${endY}%) rotate(${rotation + 720}deg)`,
              opacity: 0
            }
          ], {
            duration: duration * 1000,
            delay: Math.random() * 1000,
            easing: 'cubic-bezier(0,0,0.2,1)'
          });
        }

        setTimeout(() => {
          if (document.body.contains(confettiContainer)) {
            document.body.removeChild(confettiContainer);
          }
        }, 5000);
      }

      // Ripple effect
      walletPayButton.addEventListener('click', function(e) {
        if (this.disabled) return;
        const rect = this.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        const ripple = document.createElement('span');
        ripple.className = 'ripple';
        ripple.style.left = `${x}px`;
        ripple.style.top = `${y}px`;
        this.appendChild(ripple);
        setTimeout(() => ripple.remove(), 600);
      });

      // Initial wallet balance state check
      updateWalletBalanceState();
    });
  </script>
