<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Events â€” Evently</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/assets/css/styles.css" />
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            theme: {
              primary: "#1C2A3A",
              highlight: "#2C3E50",
              secondary: "#1C2A3A",
              accent: "#5C7C8A",
              dark: "#1C2A3A",
              surface: "#F9F7F5",
            },
            apple: {
              bg: "#EAE0CF",
              card: "rgba(255, 255, 255, 0.6)",
              text: "#1C2A3A",
              secondary: "#5C7C8A",
              accent: "#1C2A3A",
            },
          },
          fontFamily: {
            heading: ["Fraunces", "serif"],
            sans: ["Inter", "sans-serif"],
          },
        },
      },
    };
  </script>
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,300;400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
  <style>
    .no-scrollbar::-webkit-scrollbar {
      display: none;
    }

    .no-scrollbar {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
  </style>
</head>

<body class="bg-[#EAE0CF] text-[#1C2A3A]">
  <!-- Navigation -->
  <%- include('../../partials/navbar') %>
  <%- include('../../partials/toast') %>

  <!-- Page Header & Search Only -->
  <div class="pt-40 px-6 max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row justify-between items-end mb-12">
      <div>
        <h1 class="text-4xl md:text-5xl font-heading font-medium tracking-tight mb-4 text-[#1C2A3A]">
          Explore events
        </h1>
        <p class="text-[#1C2A3A]/60 font-sans">
          Find the perfect experience for your taste.
        </p>
      </div>
    </div>

    <!-- Search Bar Only -->
    <div class="bg-white/40 border border-[#1C2A3A]/5 backdrop-blur-md rounded-2xl p-4 mb-12 w-full max-w-2xl mx-auto">
      <form action="" method="GET" class="relative">
        <input type="text" name="q" placeholder="Search events..." value="<%= typeof q !== 'undefined' ? q : '' %>" class="w-full h-12 pl-12 pr-4 bg-[#F9F7F5] border-none rounded-xl text-[#1C2A3A] placeholder:text-[#1C2A3A]/40 focus:outline-none focus:ring-1 focus:ring-[#1C2A3A]/20 font-sans" />
        <button type="submit" class="absolute left-4 top-3.5 w-5 h-5 text-[#1C2A3A]/40">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </button>
      </form>
    </div>

    <!-- Events Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-24">
      <% for(let i = 0; i < events.length; i++) { %>
      <div class="bg-[#B8B2A6] rounded-[1.5rem] overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 relative group cursor-pointer" onclick="window.location.href='/events/<%= events[i]._id %>'">

        <div class="h-[280px] relative">
          <img src="<%= events[i].galleryImages[0] %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700" alt="<%= events[i].title %>" />
          <% if (userBookmarks) { %>
          <% const isBookmarked = userBookmarks.includes(events[i]._id.toString()); %>

          <button id="bookmark-btn-<%= events[i]._id %>" onclick="event.stopPropagation(); handleBookmarkToggle('<%= events[i]._id %>','<%=events[i].title%>')" class="absolute top-4 right-4 z-10 p-2 backdrop-blur-md rounded-full transition-all duration-300 shadow-lg border border-white/30 <%= isBookmarked ? 'bg-[#ED8842] text-white' : 'bg-white/20 text-white hover:bg-white/40' %>">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="<%= isBookmarked ? 'currentColor' : 'none' %>" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="m19 21-7-4-7 4V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v16z" />
            </svg>
          </button>
          <% } %>
          <div class="absolute bottom-0 left-0 p-6 w-full bg-gradient-to-t from-black/80 to-transparent">
            <h3 class="text-3xl font-heading text-white lowercase">
              <%= events[i].title %>
            </h3>
            <div class="flex gap-2 mt-2">
              <span class="px-3 py-1 bg-white/20 backdrop-blur-md rounded-full text-[10px] font-bold uppercase tracking-wider text-white">
                <%= events[i].categoryId.name %>
              </span>
            </div>
          </div>
        </div>

        <div class="p-6">
          <p class="text-[#1C2A3A]/70 text-xs leading-relaxed mb-8 font-sans">
            <%= events[i].description.substring(0, 100) + '...' %>
          </p>
          <%
      let lowestPrice = 0;
      if (events[i].ticketTypes && events[i].ticketTypes.length) {
        lowestPrice = Math.min(...events[i].ticketTypes.map(t => t.price));
      }
    %>
          <div class="absolute bottom-6 right-0 bg-[#ED8842] py-2 pl-4 pr-6 rounded-l-full flex items-center shadow-md">
            <span class="text-white font-heading text-xs tracking-tight">
              <%= lowestPrice === 0 ? "Free" : "Starting from $" + lowestPrice %>
            </span>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</body>
<script>
  async function handleBookmarkToggle(id, title) {
    try {
      const response = await fetch(`/toggleBookmark/${id}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
      });
      const result = await response.json();

      const btn = document.getElementById(`bookmark-btn-${id}`);
      if (result.action === 'Added') {
        // remove "unbookmarked" styles
        btn.classList.remove('bg-white/20', 'hover:bg-white/40');

        // add "bookmarked" styles
        btn.classList.add('bg-[#ED8842]', 'text-white');
        svg.setAttribute('fill', 'currentColor');
      }

      if (result.action === 'Removed') {
        // remove "bookmarked" styles
        btn.classList.remove('bg-[#ED8842]');

        // restore "unbookmarked" styles
        btn.classList.add('bg-white/20', 'hover:bg-white/40');
        svg.setAttribute('fill', 'none');
      }
    } catch (err) {
      console.error('Bookmark failed:', err);
    }
  }
</script>

</html>