        function checkSalesAndLockFields() {
            const ticketsSold = parseInt(document.getElementById('ticketsSold').value) || 0;

            if (ticketsSold > 0) {
                // 1. Show Warning Banner
                const bannerHtml = `
                    <div class="bg-amber-50 border-l-4 border-amber-500 p-4 mb-8 rounded-r-xl">
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-amber-500" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-amber-900 font-bold">Partial Editing Lock</p>
                                <p class="text-xs text-amber-800 mt-1">
                                    Since <strong>${ticketsSold} tickets</strong> have already been sold, critical details like 
                                    Date, Venue, and Ticket Prices are locked to prevent booking conflicts.
                                </p>
                            </div>
                        </div>
                    </div>
                `;
                document.querySelector('form').insertAdjacentHTML('afterbegin', bannerHtml);

                // 2. Lock Date & Time
                const dateInput = document.querySelector('input[type="datetime-local"]');
                if (dateInput) {
                    dateInput.disabled = true;
                    dateInput.classList.add('bg-gray-100', 'cursor-not-allowed', 'opacity-75');
                    dateInput.title = "Cannot change date after sales have started";
                }

                // 3. Lock Venue Controls
                // Lock Radio Buttons
                document.querySelectorAll('input[name="venue_mode"]').forEach(radio => {
                    radio.disabled = true;
                    radio.parentElement.classList.add('opacity-50', 'cursor-not-allowed');
                });
                // Lock Search
                const venueSearch = document.getElementById('venue-search');
                if (venueSearch) {
                    venueSearch.disabled = true;
                    venueSearch.classList.add('bg-gray-100', 'cursor-not-allowed');
                }
                // Lock Delete Venue Button
                const removeVenueBtn = document.getElementById('remove-venue');
                if (removeVenueBtn) removeVenueBtn.remove();

                // Lock Custom Inputs
                const customInputs = document.querySelectorAll('#custom-venue-section input');
                customInputs.forEach(input => {
                    input.disabled = true;
                    input.classList.add('bg-gray-100', 'cursor-not-allowed');
                });

                // 4. Lock Existing Ticket Prices
                // We assume existing tickets are rendered by server. 
                // Any input with name="ticket_price[]" that is NOT part of a new row should be locked.
                // For simplicity in this static demo, we lock ALL currently present price inputs.
                const priceInputs = document.querySelectorAll('input[name="ticket_price[]"]');
                priceInputs.forEach(input => {
                    input.readOnly = true;
                    input.classList.add('bg-gray-100', 'cursor-not-allowed');
                    input.title = "Cannot change price of active ticket types";

                    // Add lock icon
                    const lockIcon = document.createElement('span');
                    lockIcon.innerHTML = 'ðŸ”’';
                    lockIcon.className = 'absolute right-3 top-2.5 text-xs';
                    input.parentElement.classList.add('relative');
                    input.parentElement.appendChild(lockIcon);
                });
            }
        }

        function toggleVenueMode(mode) {
            const listedSection = document.getElementById('existing-venue-section');
            const customSection = document.getElementById('custom-venue-section');

            if (mode === 'listed') {
                listedSection.classList.remove('hidden');
                customSection.classList.add('hidden');
            } else {
                listedSection.classList.add('hidden');
                customSection.classList.remove('hidden');
            }
        }

        function toggleFreeTicket(checkbox) {
            const container = checkbox.closest('.grid');
            const priceInput = container.querySelector('input[name="ticket_price[]"]');
            if (checkbox.checked) {
                priceInput.dataset.oldPrice = priceInput.value;
                priceInput.value = '0.00';
                priceInput.readOnly = true;
                priceInput.classList.add('bg-gray-100', 'cursor-not-allowed');
            } else {
                priceInput.value = priceInput.dataset.oldPrice || '';
                priceInput.readOnly = false;
                priceInput.classList.remove('bg-gray-100', 'cursor-not-allowed');
            }
        }

        function toggleTicketMode(mode) {
            const freeSection = document.getElementById('free-ticket-section');
            const paidSection = document.getElementById('paid-ticket-section');

            if (mode === 'free') {
                freeSection.classList.remove('hidden');
                paidSection.classList.add('hidden');
            } else {
                freeSection.classList.add('hidden');
                paidSection.classList.remove('hidden');
            }
        }

