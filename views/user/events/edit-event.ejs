        function removeTicketType(button) {
            const ticketTypes = document.querySelectorAll('.ticket-type-item');
            if (ticketTypes.length > 1) {
                button.closest('.ticket-type-item').remove();
            } else {
                alert('You must have at least one ticket type.');
            }
        }

        function updateRemainingSeats() {
            const totalCapacity = parseInt(document.getElementById('totalCapacity').value) || 0;
            const ticketsSold = parseInt(document.getElementById('ticketsSold').value) || 0;
            const remainingSeats = totalCapacity - ticketsSold;

            document.getElementById('remainingSeats').value = remainingSeats;

            // Update capacity percentage
            const capacityPercent = Math.round((ticketsSold / totalCapacity) * 100);
            document.getElementById('capacityPercent').textContent = capacityPercent;
            document.getElementById('capacityBar').style.width = capacityPercent + '%';

            // Show warning if capacity is less than tickets sold
            const warning = document.getElementById('capacityWarning');
            if (totalCapacity < ticketsSold) {
                warning.classList.remove('hidden');
                document.getElementById('remainingSeats').classList.remove('bg-emerald-50', 'border-emerald-200', 'text-emerald-700');
                document.getElementById('remainingSeats').classList.add('bg-red-50', 'border-red-200', 'text-red-700');
            } else {
                warning.classList.add('hidden');
                document.getElementById('remainingSeats').classList.remove('bg-red-50', 'border-red-200', 'text-red-700');
                document.getElementById('remainingSeats').classList.add('bg-emerald-50', 'border-emerald-200', 'text-emerald-700');
            }
        }

        function validateForm(event) {
            const totalCapacity = parseInt(document.getElementById('totalCapacity').value) || 0;
            const ticketsSold = parseInt(document.getElementById('ticketsSold').value) || 0;

            if (totalCapacity < ticketsSold) {
                event.preventDefault();
                alert('Error: Total capacity cannot be less than tickets already sold (' + ticketsSold + ').');
                return false;
            }

            alert('Event updated successfully!');
            return false; // Prevent actual form submission for demo
        }

        function confirmDelete() {
            if (confirm('Are you sure you want to delete this event? This action cannot be undone.')) {
                alert('Event deleted successfully!');
                window.location.href = '/dashboard';
            }
        }
