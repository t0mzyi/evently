    <script>
        let ticketTypeCount = 1;

        function toggleFreeTicket(checkbox) {
            const container = checkbox.closest('.grid');
            const priceInput = container.querySelector('input[name="ticket_price[]"]');
            if (checkbox.checked) {
                priceInput.dataset.oldPrice = priceInput.value;
                priceInput.value = '0.00';
                priceInput.readOnly = true;
                priceInput.classList.add('bg-gray-100', 'cursor-not-allowed');
            } else {
                priceInput.value = priceInput.dataset.oldPrice || '';
                priceInput.readOnly = false;
                priceInput.classList.remove('bg-gray-100', 'cursor-not-allowed');
            }
        }

        function calculateTotalCapacity() {
            const qtyInputs = document.querySelectorAll('input[name="ticket_quantity[]"]');
            let total = 0;
            qtyInputs.forEach(input => {
                total += parseInt(input.value) || 0;
            });
            const capacityInput = document.getElementById('venue-capacity-input');
            capacityInput.value = total;
        }

        function toggleVenueMode(mode) {
            const listedSection = document.getElementById('existing-venue-section');
            const customSection = document.getElementById('custom-venue-section');

            if (mode === 'listed') {
                listedSection.classList.remove('hidden');
                customSection.classList.add('hidden');
            } else {
                listedSection.classList.add('hidden');
                customSection.classList.remove('hidden');
            }
        }

        function toggleTicketMode(mode) {
            const freeSection = document.getElementById('free-ticket-section');
            const paidSection = document.getElementById('paid-ticket-section');
            const capacityInput = document.getElementById('venue-capacity-input');
            const capacityBadge = document.getElementById('auto-calc-badge');
            const capacityHelper = document.getElementById('capacity-helper');

            if (mode === 'free') {
                freeSection.classList.remove('hidden');
                paidSection.classList.add('hidden');

                // Allow manual entry for free events
                capacityInput.readOnly = false;
                capacityInput.classList.remove('bg-gray-100', 'cursor-not-allowed');
                capacityInput.value = ''; // Clear or keep as user wishes
                capacityBadge.classList.add('hidden');
                capacityHelper.classList.add('hidden');
            } else {
                freeSection.classList.add('hidden');
                paidSection.classList.remove('hidden');

                // Auto-calc for paid events
                capacityInput.readOnly = true;
                capacityInput.classList.add('bg-gray-100', 'cursor-not-allowed');
                capacityBadge.classList.remove('hidden');
                capacityHelper.classList.remove('hidden');
                calculateTotalCapacity();
            }
        }

        function addTicketType() {
            ticketTypeCount++;
            const container = document.getElementById('ticketTypesContainer');
            const newTicketType = `
                <div class="ticket-type-item bg-white/50 border border-[#1C2A3A]/10 rounded-2xl p-6">
                    <div class="flex justify-between items-start mb-4">
                        <h3 class="font-heading text-lg text-[#1C2A3A]">Ticket Type ${ticketTypeCount}</h3>
                        <button type="button" onclick="removeTicketType(this)"
                            class="text-red-500 hover:text-red-700 transition-colors">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                </path>
                            </svg>
                        </button>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs font-medium text-[#1C2A3A]/60 mb-2">Ticket Name</label>
                            <input type="text" name="ticket_name[]" placeholder="e.g. General Admission, VIP, Premium"
                                class="w-full bg-white border border-[#1C2A3A]/10 rounded-xl px-4 py-2.5 text-[#1C2A3A] placeholder-[#1C2A3A]/30 focus:outline-none focus:border-[#1C2A3A]/20 transition-all">
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-[#1C2A3A]/60 mb-2">Price ($)</label>
                            <input type="number" name="ticket_price[]" placeholder="0.00" step="0.01"
                                class="w-full bg-white border border-[#1C2A3A]/10 rounded-xl px-4 py-2.5 text-[#1C2A3A] placeholder-[#1C2A3A]/30 focus:outline-none focus:border-[#1C2A3A]/20 transition-all">
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-[#1C2A3A]/60 mb-2">Quantity Available</label>
                            <input type="number" name="ticket_quantity[]" placeholder="100" min="1" oninput="calculateTotalCapacity()"
                                class="w-full bg-white border border-[#1C2A3A]/10 rounded-xl px-4 py-2.5 text-[#1C2A3A] placeholder-[#1C2A3A]/30 focus:outline-none focus:border-[#1C2A3A]/20 transition-all">
                        </div>
                        <div class="flex items-end">
                            <label class="flex items-center space-x-2 cursor-pointer">
                                <input type="checkbox" name="ticket_is_free[]" value="true" onchange="toggleFreeTicket(this)" class="rounded text-[#1C2A3A] focus:ring-[#1C2A3A]">
                                <span class="text-sm text-[#1C2A3A]/60">Free Ticket</span>
                            </label>
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-xs font-medium text-[#1C2A3A]/60 mb-2">Description (Optional)</label>
                            <input type="text" name="ticket_description[]" placeholder="e.g. Includes backstage access, complimentary drinks"
                                class="w-full bg-white border border-[#1C2A3A]/10 rounded-xl px-4 py-2.5 text-[#1C2A3A] placeholder-[#1C2A3A]/30 focus:outline-none focus:border-[#1C2A3A]/20 transition-all">
                        </div>
                    </div>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', newTicketType);
            calculateTotalCapacity();
        }

        function removeTicketType(button) {
            const ticketTypes = document.querySelectorAll('.ticket-type-item');
            if (ticketTypes.length > 1) {
                button.closest('.ticket-type-item').remove();
                calculateTotalCapacity();
            } else {
                alert('You must have at least one ticket type.');
            }
        }

        // Initial setup
        document.addEventListener('DOMContentLoaded', function () {
            // Add listeners to initial inputs
            const initialQtyInputs = document.querySelectorAll('input[name="ticket_quantity[]"]');
            initialQtyInputs.forEach(input => {
                input.addEventListener('input', calculateTotalCapacity);
            });

            // Run initial calc if in paid mode
            const isPaid = document.querySelector('input[name="event_type"][value="paid"]').checked;
            if (isPaid) {
                calculateTotalCapacity();
                toggleTicketMode('paid');
            }
        });
    </script>
</body>

