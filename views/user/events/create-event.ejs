                            </div>

                            <!-- Submit -->
                            <div class="pt-8 flex justify-end">
                                <button type="submit"
                                    class="px-8 py-4 bg-[#1C2A3A] text-white rounded-2xl font-heading text-lg tracking-wide hover:bg-[#2C3E50] transition-transform hover:scale-[1.02] shadow-xl">
                                    Publish Event
                                </button>
                            </div>

                </form>
