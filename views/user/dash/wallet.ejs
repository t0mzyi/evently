<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Wallet — Evently</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/assets/css/styles.css" />
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            theme: {
              primary: '#1C2A3A',
              highlight: '#2C3E50',
              accent: '#ED8842',
              surface: '#F9F7F5',
            }
          },
          fontFamily: {
            heading: ['Fraunces', 'serif'],
            sans: ['Inter', 'sans-serif'],
          },
          animation: {
            'fade-in': 'fadeIn 0.5s ease-out',
            'slide-up': 'slideUp 0.4s ease-out',
            'pulse-slow': 'pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite',
            'float': 'float 6s ease-in-out infinite',
          },
          keyframes: {
            fadeIn: {
              '0%': {
                opacity: 0,
                transform: 'translateY(10px)'
              },
              '100%': {
                opacity: 1,
                transform: 'translateY(0)'
              }
            },
            slideUp: {
              '0%': {
                opacity: 0,
                transform: 'translateY(20px)'
              },
              '100%': {
                opacity: 1,
                transform: 'translateY(0)'
              }
            },
            float: {
              '0%, 100%': {
                transform: 'translateY(0)'
              },
              '50%': {
                transform: 'translateY(-10px)'
              }
            }
          }
        }
      }
    };
  </script>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,300;400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
  <style>
    /* Success/Error Modal */
    .notification-modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s ease;
    }

    .notification-modal.show {
      opacity: 1;
      pointer-events: auto;
    }

    .notification-content {
      background: white;
      border-radius: 1rem;
      padding: 2rem;
      max-width: 400px;
      width: 90%;
      text-align: center;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
      transform: translateY(20px);
      transition: transform 0.3s ease;
    }

    .notification-modal.show .notification-content {
      transform: translateY(0);
    }

    .notification-title {
      font-weight: 600;
      margin-bottom: 1rem;
      color: #1C2A3A;
    }

    .success {
      color: #10B981;
    }

    .error {
      color: #EF4444;
    }

    .notification-btn {
      margin-top: 1.5rem;
      padding: 0.5rem 1.5rem;
      background: #ED8842;
      color: white;
      border: none;
      border-radius: 0.5rem;
      cursor: pointer;
      font-weight: 500;
      transition: background 0.2s;
    }

    .notification-btn:hover {
      background: #E07A3A;
    }

    @keyframes gradientShift {
      0% {
        background-position: 0% 50%;
      }

      50% {
        background-position: 100% 50%;
      }

      100% {
        background-position: 0% 50%;
      }
    }

    @keyframes spin-slow {
      to {
        transform: rotate(360deg);
      }
    }

    .animate-spin-slow {
      animation: spin-slow 2s linear infinite;
    }


    .animate-gradient {
      background-size: 200% 200%;
      animation: gradientShift 8s ease infinite;
    }

    .nav-btn.active {
      background: linear-gradient(135deg, rgba(237, 136, 66, 0.15), rgba(237, 136, 66, 0.05));
      border-left: 3px solid #ED8842;
      color: #1C2A3A !important;
      font-weight: 500;
    }

    .nav-btn.active svg {
      opacity: 1 !important;
      color: #ED8842;
    }

    .balance-card {
      transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
      transform-origin: center top;
    }

    .balance-card:hover {
      transform: translateY(-5px) scale(1.015);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.15), 0 10px 10px -5px rgba(0, 0, 0, 0.05);
    }

    .modal-content {
      opacity: 0;
      transform: scale(0.95) translateY(20px);
      transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    }

    .modal-content.visible {
      opacity: 1;
      transform: scale(1) translateY(0);
    }

    .pulse-animation {
      animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    .floating {
      animation: float 6s ease-in-out infinite;
    }

    .stagger-item {
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.5s ease, transform 0.5s ease;
    }

    .stagger-item.visible {
      opacity: 1;
      transform: translateY(0);
    }

    /* Loading spinner */
    .spinner {
      display: inline-block;
      width: 20px;
      height: 20px;
      border: 3px solid rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      border-top-color: #fff;
      animation: spin 1s ease-in-out infinite;
    }

    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }

    .loading-text {
      margin-left: 8px;
    }

    /* Currency conversion indicator */
    .currency-indicator {
      position: absolute;
      right: 12px;
      top: 50%;
      transform: translateY(-50%);
      color: #1C2A3A;
      font-size: 0.875rem;
      opacity: 0.7;
    }

    /* Filter controls */
    #searchTransactions:focus {
      box-shadow: 0 0 0 3px rgba(237, 136, 66, 0.2);
    }

    .filter-btn {
      transition: all 0.3s ease;
    }

    .filter-btn:hover:not(:disabled) {
      transform: translateY(-1px);
    }

    .filter-btn:active {
      transform: translateY(0);
    }

    @keyframes pulse {

      0%,
      100% {
        transform: scale(1);
      }

      50% {
        transform: scale(1.05);
      }
    }

    .active-filter-badge {
      animation: pulse 0.5s ease;
    }

    @media (max-width: 640px) {
      .filter-controls {
        flex-direction: column;
        align-items: stretch;
      }

      #searchTransactions {
        width: 100% !important;
      }
    }
  </style>
</head>

<body class="bg-[#EAE0CF] text-[#1C2A3A] min-h-screen">
  <!-- Global Navigation -->
  <!-- Simulated navbar for demo -->
  <%- include('../../partials/navbar') %>

  <div class="flex pt-28 max-w-7xl mx-auto px-6 gap-8 pb-12 animate-fade-in">
    <!-- Sidebar Navigation -->
    <%- include('../../partials/sideBar') %>
    <!-- Simulated sidebar for demo -->

    <!-- Main Content -->
    <main class="flex-1 w-full min-w-0">
      <div class="flex flex-col md:flex-row justify-between items-end mb-8 stagger-container">
        <div class="stagger-item" style="animation-delay: 0.1s">
          <h1 class="text-4xl md:text-5xl font-heading font-medium tracking-tight mb-2 text-[#1C2A3A]">Wallet</h1>
          <p class="text-[#1C2A3A]/60 font-sans">Track your earnings and payout history.</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-4 mt-4 md:mt-0 stagger-item" style="animation-delay: 0.2s">
          <button id="addMoneyBtn" onclick="document.getElementById('addMoneyModal').classList.remove('hidden')" class="px-6 py-3 border-2 border-[#1C2A3A] text-[#1C2A3A] rounded-xl font-medium hover:bg-[#1C2A3A] hover:text-white transition-all flex items-center gap-2 shadow-sm hover:shadow-md transform hover:-translate-y-0.5">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Money
          </button>
          <button onclick="document.getElementById('withdrawModal').classList.remove('hidden')" class="px-6 py-3 bg-[#1C2A3A] text-white rounded-xl font-medium shadow-lg hover:bg-[#2C3E50] transition-all flex items-center gap-2 hover:shadow-xl transform hover:-translate-y-0.5 pulse-animation">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            Request Payout
          </button>
        </div>
      </div>

      <!-- Balance Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8 stagger-container">
        <!-- Total Balance -->
        <div class="balance-card bg-gradient-to-br from-[#1C2A3A] to-[#2C3E50] text-white rounded-[2rem] p-8 shadow-xl relative overflow-hidden group">
          <div class="absolute -top-12 -right-12 w-40 h-40 bg-white/10 rounded-full blur-3xl group-hover:bg-white/20 transition-colors duration-500 animate-gradient"></div>
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-[#ED8842]/10 to-transparent animate-gradient"></div>
          <p class="text-white/70 text-xs font-bold uppercase tracking-widest mb-1 relative z-10">Available Balance</p>
          <h2 class="text-4xl font-heading mb-4 relative z-10">₹<span data-balance="available"><%= details.walletInfo.availableBalance %></span></h2>
          <div class="flex items-center gap-2 text-white/70 text-sm relative z-10">
            <div class="w-2 h-2 rounded-full bg-emerald-400"></div>
            <span>Ready to withdraw</span>
          </div>
          <div class="absolute bottom-4 right-4 opacity-20">
            <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>



        <!-- Total Earnings -->
        <div class="balance-card bg-white/60 backdrop-blur-xl border border-white/40 rounded-[2rem] p-8 shadow-sm relative overflow-hidden group hover:bg-white/70 transition-colors">
          <div class="absolute -top-12 -right-12 w-40 h-40 bg-[#1C2A3A]/5 rounded-full blur-3xl group-hover:bg-[#1C2A3A]/10 transition-colors duration-500"></div>
          <p class="text-[#1C2A3A]/50 text-xs font-bold uppercase tracking-widest mb-1">Total Lifetime</p>
          <h2 class="text-4xl font-heading mb-4 text-[#1C2A3A]">₹<%= details.walletInfo.totalEarnings %></h2>
          <div class="flex items-center gap-2 text-[#1C2A3A]/60 text-sm">
            <svg class="w-4 h-4 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
            <span>All-time earnings</span>
          </div>
          <div class="absolute bottom-4 right-4 opacity-10">
            <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Transaction History -->
      <div class="bg-white/60 backdrop-blur-xl rounded-[2.5rem] shadow-sm border border-white/40 overflow-hidden animate-slide-up stagger-container" style="animation-delay: 0.3s">
        <div class="p-8 border-b border-[#1C2A3A]/5 flex justify-between items-center">
          <h3 class="text-xl font-heading text-[#1C2A3A]">Recent Transactions</h3>
          <button class="text-sm font-bold text-[#1C2A3A]/60 hover:text-[#1C2A3A] transition-colors flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
            </svg>
            Download Statement
          </button>
        </div>

        <!-- Transaction Filters -->
        <div class="px-8 py-4 border-b border-[#1C2A3A]/5 bg-[#F8FAFC]">
          <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
            <!-- Search and Type Filters -->
            <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
              <!-- Search Input -->
              <div class="relative flex-1 sm:flex-initial">
                <div class="absolute left-3 top-1/2 -translate-y-1/2 text-[#1C2A3A]/40">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                </div>
                <input type="text" id="searchTransactions" class="w-full sm:w-64 bg-white border border-[#1C2A3A]/10 rounded-xl pl-10 pr-4 py-2 text-sm text-[#1C2A3A] focus:outline-none focus:ring-2 focus:ring-[#ED8842] focus:border-transparent transition-all" placeholder="Search transactions..." value="<%= details.pagination && details.pagination.filters ? details.pagination.filters.search : '' %>">
              </div>

              <!-- Type Filter Buttons -->
              <div class="flex gap-2">
                <button onclick="applyFilter('type', 'all')" class="px-4 py-2 rounded-xl text-xs font-medium transition-all <%= (details.pagination && details.pagination.filters && details.pagination.filters.type === 'all') || !(details.pagination && details.pagination.filters) ? 'bg-[#1C2A3A] text-white shadow-md' : 'bg-white text-[#1C2A3A]/60 border border-[#1C2A3A]/10 hover:bg-[#1C2A3A]/5' %>">
                  All
                </button>
                <button onclick="applyFilter('type', 'credit')" class="px-4 py-2 rounded-xl text-xs font-medium transition-all flex items-center gap-1 <%= details.pagination && details.pagination.filters && details.pagination.filters.type === 'credit' ? 'bg-emerald-100 text-emerald-700 shadow-md' : 'bg-white text-[#1C2A3A]/60 border border-[#1C2A3A]/10 hover:bg-emerald-50' %>">
                  <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
                  Credit
                </button>
                <button onclick="applyFilter('type', 'debit')" class="px-4 py-2 rounded-xl text-xs font-medium transition-all flex items-center gap-1 <%= details.pagination && details.pagination.filters && details.pagination.filters.type === 'debit' ? 'bg-rose-100 text-rose-700 shadow-md' : 'bg-white text-[#1C2A3A]/60 border border-[#1C2A3A]/10 hover:bg-rose-50' %>">
                  <span class="w-2 h-2 rounded-full bg-rose-500"></span>
                  Debit
                </button>
              </div>
            </div>

            <!-- Sort Dropdown -->
            <div class="flex items-center gap-3 w-full sm:w-auto">
              <span class="text-xs text-[#1C2A3A]/60 hidden sm:inline">Sort by:</span>
              <div class="relative">
                <select id="sortTransactions" onchange="applyFilter('sort', this.value)" class="appearance-none bg-white border border-[#1C2A3A]/10 rounded-xl px-4 py-2 text-sm text-[#1C2A3A] focus:outline-none focus:ring-2 focus:ring-[#ED8842] focus:border-transparent cursor-pointer transition-all">
                  <option value="date_desc" <%= !(details.pagination && details.pagination.filters) || (details.pagination && details.pagination.filters.sort === 'date_desc') ? 'selected' : '' %>>Newest First</option>
                  <option value="date_asc" <%= details.pagination && details.pagination.filters && details.pagination.filters.sort === 'date_asc' ? 'selected' : '' %>>Oldest First</option>
                  <option value="amount_desc" <%= details.pagination && details.pagination.filters && details.pagination.filters.sort === 'amount_desc' ? 'selected' : '' %>>Highest Amount</option>
                  <option value="amount_asc" <%= details.pagination && details.pagination.filters && details.pagination.filters.sort === 'amount_asc' ? 'selected' : '' %>>Lowest Amount</option>
                  <option value="status" <%= details.pagination && details.pagination.filters && details.pagination.filters.sort === 'status' ? 'selected' : '' %>>Status (A-Z)</option>
                </select>
                <div class="absolute right-3 top-1/2 -translate-y-1/2 text-[#1C2A3A]/40 pointer-events-none">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </div>
              </div>

              <!-- Clear Filters Button -->
              <% if (details.pagination && details.pagination.filters && (details.pagination.filters.search || details.pagination.filters.type !== 'all' || details.pagination.filters.sort !== 'date_desc')) { %>
              <button onclick="clearFilters()" class="px-3 py-2 rounded-xl text-xs font-medium bg-[#1C2A3A]/10 text-[#1C2A3A]/60 hover:bg-[#1C2A3A]/20 hover:text-[#1C2A3A] transition-all flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                Clear
              </button>
              <% } %>
            </div>
          </div>

          <!-- Active Filters Badge (Mobile) -->
          <% if (details.pagination && details.pagination.filters && (details.pagination.filters.search || details.pagination.filters.type !== 'all' || details.pagination.filters.sort !== 'date_desc')) { %>
          <div class="mt-3 flex flex-wrap gap-2">
            <% if (details.pagination.filters.search) { %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-[#1C2A3A]/10 text-[#1C2A3A]">
              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              "<%= details.pagination.filters.search %>"
              <button onclick="clearSearch()" class="ml-1 hover:text-[#1C2A3A]">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </span>
            <% } %>

            <% if (details.pagination.filters.type !== 'all') { %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= details.pagination.filters.type === 'credit' ? 'bg-emerald-100 text-emerald-800' : 'bg-rose-100 text-rose-800' %>">
              <%= details.pagination.filters.type.charAt(0).toUpperCase() + details.pagination.filters.type.slice(1) %>
              <button onclick="applyFilter('type', 'all')" class="ml-1 hover:opacity-70">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </span>
            <% } %>
          </div>
          <% } %>
        </div>

        <div class="overflow-x-auto rounded-xl border border-[#1C2A3A]/10 shadow-sm">
          <table class="w-full text-left min-w-[600px]">
            <thead class="bg-[#F8FAFC]">
              <tr class="text-xs font-semibold tracking-wide text-[#475569] uppercase border-b border-[#1C2A3A]/10">
                <th class="px-6 py-4 whitespace-nowrap">Transaction</th>
                <th class="px-6 py-4 whitespace-nowrap">Date</th>
                <th class="px-6 py-4 whitespace-nowrap">Status</th>
                <th class="px-6 py-4 whitespace-nowrap">Type</th>
                <th class="px-6 py-4 whitespace-nowrap text-right">Amount</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-[#1C2A3A]/5">
              <% if (details.transactions && details.transactions.length > 0) { %>
              <% for (let i = 0; i < details.transactions.length; i++) { 
          const tx = details.transactions[i];
          const isCredit = tx.type === "credit";
          const amountColor = isCredit ? "text-emerald-600" : "text-rose-600";
          const amountPrefix = isCredit ? "+" : "-";
        %>
              <tr class="hover:bg-[#F9FAFB] transition-colors group">
                <td class="px-6 py-4">
                  <div class="flex items-start">
                    <div class="mt-1 mr-3 flex-shrink-0">
                      <% if (tx.status === "COMPLETED") { %>
                      <div class="w-8 h-8 rounded-lg bg-emerald-50 flex items-center justify-center">
                        <span class="text-emerald-600 font-bold text-sm">✓</span>
                      </div>
                      <% } else if (tx.status === "PENDING") { %>
                      <div class="w-8 h-8 rounded-lg bg-amber-50 flex items-center justify-center">
                        <span class="text-amber-600 font-bold text-sm">⋯</span>
                      </div>
                      <% } else if (tx.status === "FAILED") { %>
                      <div class="w-8 h-8 rounded-lg bg-rose-50 flex items-center justify-center">
                        <span class="text-rose-600 font-bold text-sm">!</span>
                      </div>
                      <% } %>
                    </div>
                    <div>
                      <div class="font-medium text-[#1E293B] group-hover:text-[#0F172A] transition-colors"><%= tx.description %></div>
                      <div class="text-xs text-[#64748B] mt-0.5 flex items-center">
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-[10px] font-medium 
                    <%= tx.status === 'COMPLETED' ? 'bg-emerald-100 text-emerald-800' : 
                       tx.status === 'PENDING' ? 'bg-amber-100 text-amber-800' : 
                       'bg-rose-100 text-rose-800' %>">
                          <%= tx.status.replace('_', ' ') %>
                        </span>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-[#475569]"><%= tx.date.date %> <%= tx.date.time %> </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center justify-start">
                    <% if (tx.status === "COMPLETED") { %>
                    <span class="text-emerald-500 text-lg" title="Completed">✓</span>
                    <% } else if (tx.status === "PENDING") { %>
                    <span class="text-amber-500 animate-spin-slow" title="Pending">↻</span>
                    <% } else if (tx.status === "FAILED") { %>
                    <span class="text-rose-500 text-lg" title="Failed">⚠</span>
                    <% } %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2.5 py-1 rounded-full text-xs font-medium 
              <%= isCredit ? 'bg-emerald-100 text-emerald-800' : 'bg-rose-100 text-rose-800' %>">
                    <%= isCredit ? 'CREDIT' : 'DEBIT' %>
                  </span>
                </td>
                <td class="px-6 py-4 font-bold text-right <%= amountColor %> whitespace-nowrap">
                  <%= amountPrefix %>₹<%= parseFloat(tx.amount).toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",") %>
                </td>
              </tr>
              <% } %>
              <% } else { %>
              <tr>
                <td colspan="5" class="px-6 py-12 text-center text-[#64748B]">
                  <div class="flex flex-col items-center justify-center py-8">
                    <div class="w-16 h-16 rounded-full bg-[#F1F5F9] flex items-center justify-center mb-3">
                      <svg class="w-8 h-8 text-[#94A3B8]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>

                    <% if (details.pagination && details.pagination.filters && (details.pagination.filters.search || details.pagination.filters.type !== 'all')) { %>
                    <p class="text-sm font-medium text-[#1C2A3A]">No matching transactions</p>
                    <p class="text-xs text-[#64748B] mt-1 mb-4">Try adjusting your filters</p>
                    <button onclick="clearFilters()" class="px-4 py-2 bg-[#1C2A3A] text-white rounded-xl text-sm font-medium hover:bg-[#2C3E50] transition-all">
                      Clear Filters
                    </button>
                    <% } else { %>
                    <p class="text-sm font-medium text-[#475569]">No transactions found</p>
                    <p class="text-xs text-[#64748B] mt-1">Your transaction history will appear here</p>
                    <% } %>
                  </div>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>


        <!-- Pagination Controls -->
        <!-- Pagination Controls -->
        <% if (details.pagination && details.pagination.totalPages > 1) { %>
        <div class="px-8 py-6 border-t border-[#1C2A3A]/5">
          <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
            <!-- Page Info -->
            <div class="text-sm text-[#1C2A3A]/60">
              Showing
              <span class="font-bold text-[#1C2A3A]">
                <%= (details.pagination.currentPage - 1) * details.pagination.limit + 1 %>
                -
                <%= Math.min(details.pagination.currentPage * details.pagination.limit, details.pagination.totalTransactions) %>
              </span>
              of
              <span class="font-bold text-[#1C2A3A]"><%= details.pagination.totalTransactions %></span>
              transactions
            </div>

            <!-- Simplified Pagination Buttons -->
            <div class="flex items-center gap-1.5">
              <!-- First Page -->
              <button onclick="changePage(1)" class="w-9 h-9 rounded-lg flex items-center justify-center <%= details.pagination.currentPage === 1 ? 'bg-[#1C2A3A]/10 text-[#1C2A3A]/30 cursor-not-allowed' : 'bg-white border border-[#1C2A3A]/10 text-[#1C2A3A]/60 hover:bg-[#1C2A3A]/5 hover:text-[#1C2A3A]' %> transition-all" <%= details.pagination.currentPage === 1 ? 'disabled' : '' %> title="First Page">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path>
                </svg>
              </button>

              <!-- Previous Page -->
              <button onclick="changePage(<%= details.pagination.currentPage - 1 %>)" class="w-9 h-9 rounded-lg flex items-center justify-center <%= details.pagination.currentPage === 1 ? 'bg-[#1C2A3A]/10 text-[#1C2A3A]/30 cursor-not-allowed' : 'bg-white border border-[#1C2A3A]/10 text-[#1C2A3A]/60 hover:bg-[#1C2A3A]/5 hover:text-[#1C2A3A]' %> transition-all" <%= details.pagination.currentPage === 1 ? 'disabled' : '' %> title="Previous Page">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
              </button>

              <!-- Current Page -->
              <span class="w-9 h-9 rounded-lg flex items-center justify-center font-bold bg-[#1C2A3A] text-white text-sm">
                <%= details.pagination.currentPage %>
              </span>

              <!-- Next Page -->
              <button onclick="changePage(<%= details.pagination.currentPage + 1 %>)" class="w-9 h-9 rounded-lg flex items-center justify-center <%= details.pagination.currentPage === details.pagination.totalPages ? 'bg-[#1C2A3A]/10 text-[#1C2A3A]/30 cursor-not-allowed' : 'bg-white border border-[#1C2A3A]/10 text-[#1C2A3A]/60 hover:bg-[#1C2A3A]/5 hover:text-[#1C2A3A]' %> transition-all" <%= details.pagination.currentPage === details.pagination.totalPages ? 'disabled' : '' %> title="Next Page">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </button>

              <!-- Last Page -->
              <button onclick="changePage(<%= details.pagination.totalPages %>)" class="w-9 h-9 rounded-lg flex items-center justify-center <%= details.pagination.currentPage === details.pagination.totalPages ? 'bg-[#1C2A3A]/10 text-[#1C2A3A]/30 cursor-not-allowed' : 'bg-white border border-[#1C2A3A]/10 text-[#1C2A3A]/60 hover:bg-[#1C2A3A]/5 hover:text-[#1C2A3A]' %> transition-all" <%= details.pagination.currentPage === details.pagination.totalPages ? 'disabled' : '' %> title="Last Page">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </main>
  </div>

  <!-- Withdrawal Modal -->
  <div id="withdrawModal" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-6 animate-fade-in">
    <div class="bg-white/90 backdrop-blur-xl rounded-[2rem] p-8 md:p-12 max-w-md w-full shadow-2xl border border-white/40 modal-content">
      <h2 class="text-2xl font-heading font-bold text-[#1C2A3A] mb-2">Request Payout</h2>
      <p class="text-[#1C2A3A]/60 mb-6">Withdraw earnings to your connected account.</p>
      <form action="#" onsubmit="event.preventDefault(); processWithdrawal();">
        <div class="mb-6">
          <label class="block text-[10px] font-bold uppercase tracking-widest text-[#1C2A3A]/40 mb-2">Amount</label>
          <div class="relative">
