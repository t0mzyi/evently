  <!-- Add Money Modal -->
  <div id="addMoneyModal" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-6 animate-fade-in">
    <div class="bg-white/90 backdrop-blur-xl rounded-[2rem] p-8 md:p-12 max-w-md w-full shadow-2xl border border-white/40 modal-content">
      <h2 class="text-2xl font-heading font-bold text-[#1C2A3A] mb-2">Add Funds</h2>
      <p class="text-[#1C2A3A]/60 mb-6">Add money to your Evently wallet for event bookings and services.</p>
      <form id="addMoneyForm" action="#" onsubmit="event.preventDefault(); processAddMoney();">
        <div class="mb-6">
          <label class="block text-[10px] font-bold uppercase tracking-widest text-[#1C2A3A]/40 mb-2">Amount</label>
          <div class="relative">
            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-[#1C2A3A] font-medium text-xl">₹</span>
            <input type="text" id="addAmount" class="w-full bg-white/50 border border-[#1C2A3A]/10 rounded-xl px-4 py-3 pl-8 text-[#1C2A3A] text-xl font-bold focus:outline-none focus:ring-2 focus:ring-[#ED8842] transition-all" placeholder="0.00" value="100.00" inputmode="decimal">
          </div>
          <p class="text-xs text-[#1C2A3A]/50 mt-1">Minimum amount: ₹10.00</p>
        </div>
        <div class="mb-6">
          <label class="block text-[10px] font-bold uppercase tracking-widest text-[#1C2A3A]/40 mb-2">Payment Method</label>
          <div class="space-y-3">
            <label class="flex items-center p-4 border border-[#1C2A3A]/10 rounded-xl cursor-pointer hover:border-[#ED8842] transition-colors">
              <input type="radio" name="paymentMethod" value="razorpay" class="form-radio text-[#ED8842] border-[#1C2A3A]/20" checked>
              <div class="ml-4 flex items-center">
                <div class="w-8 h-5 bg-blue-600 rounded mr-3 flex items-center justify-center">
                  <span class="text-white text-xs font-bold">RP</span>
                </div>
                <span class="font-medium">RazorPay</span>
                <span class="ml-2 text-xs text-[#1C2A3A]/50">user@example.com</span>
              </div>
            </label>
          </div>
        </div>

        <div class="flex gap-4">
          <button type="button" onclick="closeModal('addMoneyModal')" class="flex-1 px-4 py-3 rounded-xl border border-[#1C2A3A]/10 text-sm font-bold text-[#1C2A3A] hover:bg-[#F9F7F5] transition-all transform hover:-translate-y-0.5">
            Cancel
          </button>
          <button type="submit" id="addMoneySubmitBtn" class="flex-1 px-4 py-3 bg-[#ED8842] text-white rounded-xl text-sm font-bold shadow-lg hover:bg-[#E07A3A] transition-all transform hover:-translate-y-0.5 hover:shadow-xl">
            Add Funds
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Apply filter function
    function applyFilter(filterType, value) {
      const url = new URL(window.location.href);

      if (filterType === 'type') {
        if (value === 'all') {
          url.searchParams.delete('type');
        } else {
          url.searchParams.set('type', value);
        }
      } else if (filterType === 'sort') {
        if (value === 'date_desc') {
          url.searchParams.delete('sort');
        } else {
          url.searchParams.set('sort', value);
        }
      } else if (filterType === 'search') {
        if (!value || value.trim() === '') {
          url.searchParams.delete('search');
        } else {
          url.searchParams.set('search', value);
        }
      }

      // Reset to page 1 when filters change
      url.searchParams.set('page', '1');

      window.location.href = url.toString();
    }

    // Clear all filters
    function clearFilters() {
      const url = new URL(window.location.href);
      url.searchParams.delete('search');
      url.searchParams.delete('sort');
      url.searchParams.delete('type');
      url.searchParams.set('page', '1');
      window.location.href = url.toString();
    }

    // Clear search only
    function clearSearch() {
      document.getElementById('searchTransactions').value = '';
      applyFilter('search', '');
    }

    // Search with debounce
    let searchTimeout;
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.getElementById('searchTransactions');
      if (searchInput) {
        searchInput.addEventListener('input', function(e) {
          clearTimeout(searchTimeout);
          searchTimeout = setTimeout(() => {
            applyFilter('search', e.target.value.trim());
          }, 500); // 500ms debounce
        });

        // Enter key to search
        searchInput.addEventListener('keypress', function(e) {
          if (e.key === 'Enter') {
            clearTimeout(searchTimeout);
            applyFilter('search', e.target.value.trim());
          }
        });
      }
    });

    function changePage(page) {
      if (page < 1) return;

      // Get current URL and update query parameter
      const url = new URL(window.location.href);
      url.searchParams.set('page', page);

      // Reload with new page
      window.location.href = url.toString();
    }

    // Optional: Add keyboard navigation
    document.addEventListener('keydown', function(e) {
      if (e.key === 'ArrowLeft' && <%= details.pagination && details.pagination.hasPrevPage ? 'true' : 'false' %>) {
        changePage(<%= details.pagination.currentPage - 1 %>);
      }
      if (e.key === 'ArrowRight' && <%= details.pagination && details.pagination.hasNextPage ? 'true' : 'false' %>) {
        changePage(<%= details.pagination.currentPage + 1 %>);
      }

      // Ctrl + F or Cmd + F to focus search
      if ((e.ctrlKey || e.metaKey) && e.key === 'f') {
        e.preventDefault();
        const searchInput = document.getElementById('searchTransactions');
        if (searchInput) searchInput.focus();
      }

      // Escape to clear search
      if (e.key === 'Escape') {
        const searchInput = document.getElementById('searchTransactions');
        if (searchInput && document.activeElement === searchInput) {
          clearSearch();
          searchInput.blur();
        }
      }
    });

    window.addEventListener('pageshow', function(event) {
      if (event.persisted) {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      }
    });

    // Notification modal handler
    function showNotification(message, isSuccess = true) {
      const modal = document.createElement('div');
      modal.className = 'notification-modal';
      modal.innerHTML = `
      <div class="notification-content">
        <div class="notification-title ${isSuccess ? 'success' : 'error'}">
          ${isSuccess ? 'Success!' : 'Error!'}
        </div>
        <p>${message}</p>
        <button class="notification-btn">OK</button>
      </div>
    `;

      document.body.appendChild(modal);
      setTimeout(() => modal.classList.add('show'), 10);

      modal.querySelector('.notification-btn').onclick = () => {
        modal.classList.remove('show');
        setTimeout(() => document.body.removeChild(modal), 300);
      };
    }

    // Process add money with loading state and validation
    function processAddMoney() {
      const addAmountInput = document.getElementById('addAmount');
      const submitBtn = document.getElementById('addMoneySubmitBtn');

      // Clean input: remove commas/spaces and parse
      const rawValue = addAmountInput.value.replace(/[^\d.]/g, '');
      const amount = parseFloat(rawValue);

      if (isNaN(amount) || amount < 10) {
        showNotification('Please enter a valid amount of at least ₹10.00', false);
        return;
      }

      // Show loading state
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<div class="spinner"></div><span class="loading-text">Creating Order...</span>';

      fetch('/wallet/addMoney', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            amount,
            paymentMethod: 'razorpay'
          })
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            openRazorpayCheckout(data.data);
          } else {
            throw new Error(data.message || 'Failed to create order');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          showNotification('Failed to add funds. Please try again.', false);
          submitBtn.disabled = false;
          submitBtn.innerHTML = 'Add Funds';
        });
    }

    function openRazorpayCheckout(order) {
      const options = {
        key: order.key,
        amount: order.amount,
        currency: "INR",
        name: "Evently",
        description: "Add money to wallet",
        order_id: order.orderId,
        handler: function(response) {
          verifyPayment(response);
        },
        modal: {
          ondismiss: function() {
            handlePaymentCancel(order.orderId);
          }
        },
        theme: {
          color: "#ED8842",
        },

      };

      const rzp = new Razorpay(options);
      rzp.on('payment.failed', function(response) {
        handlePaymentCancel(order.orderId);
      });
      rzp.open();
      closeModal('addMoneyModal');

      document.getElementById('addMoneySubmitBtn').disabled = false;
      document.getElementById('addMoneySubmitBtn').innerHTML = 'Add Funds';
    }

    function handlePaymentCancel(orderId) {
      // We send a request to your server to say "Hey, this order was cancelled"
      fetch('/wallet/cancelPayment', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            orderId: orderId
          })
        })
        .then(res => res.json())
        .then(data => {
          console.log("Transaction updated to FAILED");
          window.location.href = `/dashboard/wallet?status=error&message=Wallet transaction failed`;
        })
        .catch(err => console.error("Error reporting cancellation:", err));
    }

    function verifyPayment(response) {
      fetch('/wallet/verifyPayment', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(response)
        })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            window.location.reload();
          } else {
            showNotification("Payment verification failed: " + (data.message || ""), false);
          }
        })
        .catch(() => {
          showNotification("Something went wrong while verifying payment", false);
        });
    }

    // Process withdrawal
    function processWithdrawal() {
      const amount = parseFloat(document.getElementById('withdrawAmount').value);
      const currentBalanceEl = document.querySelector('[data-balance="available"]');
      const currentBalance = parseFloat(currentBalanceEl.textContent.replace(/,/g, ''));
      const newBalance = currentBalance - amount;

      currentBalanceEl.textContent = newBalance.toLocaleString('en-IN', {
        minimumFractionDigits: 2
      });

      showNotification(`Withdrawal request for ₹${amount.toFixed(2)} submitted!`);
      closeModal('withdrawModal');
    }

    function closeModal(modalId) {
      document.getElementById(modalId).classList.add('hidden');
    }

    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('[id$="Modal"]').forEach(modal => {
        modal.addEventListener('click', function(e) {
          if (e.target === this) closeModal(this.id);
        });
      });

      setTimeout(() => {
        document.querySelectorAll('.stagger-item').forEach(item => {
          item.classList.add('visible');
        });
        document.querySelectorAll('.modal-content').forEach(el => {
          el.classList.add('visible');
        });
      }, 100);
    });
  </script>
</body>

