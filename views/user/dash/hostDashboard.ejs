            <svg class="w-10 h-10 text-[#1C2A3A]/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10">
              </path>
            </svg>
          </div>
          <h3 class="text-xl font-heading font-medium text-[#1C2A3A] mb-2">No Hosted Events</h3>
          <p class="text-[#1C2A3A]/60 max-w-md mb-8">You haven't created any events yet. Start hosting to
            see
            your dashboard light up!</p>
          <a href="/createEvent" class="px-8 py-4 bg-[#1C2A3A] text-white rounded-xl font-medium shadow-lg hover:bg-[#2C3E50] transition-all hover:scale-105 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4">
              </path>
            </svg>
            Create Your First Event
          </a>

          <% } else { %>
          <div class="space-y-6">
            <!-- Event Card 1 -->
            <%for(let i = 0 ;i < user.hostedEvents.length ; i++){ %>
            <% if(user.hostedEvents[i].status == 'live') {%>
            <div class="bg-white/60 backdrop-blur-xl rounded-[2rem] overflow-hidden shadow-sm border border-white/40 hover:shadow-lg transition-all">
              <!-- Flex row with min-h-0 to prevent stretching -->
              <div class="flex flex-col md:flex-row min-h-0">
                <div class="w-full md:w-1/3 h-[275px] relative overflow-hidden rounded-lg">
                  <div class="w-full h-full flex items-center justify-center transition-transform duration-300 hover:scale-105">
                    <img src="<%= user.hostedEvents[i].galleryImages[0] %>" class="w-full h-full object-cover block" alt="<%= user.hostedEvents[i].title || 'Event' %>">
                  </div>
                  <div class="absolute top-4 left-4 bg-emerald-500/90 backdrop-blur-md px-3 py-1 rounded-full z-10">
                    <span class="text-[10px] font-bold text-white uppercase tracking-widest">Active</span>
                  </div>
                </div>

                <!-- Event Details -->
                <div class="flex-1 p-6">
                  <div class="flex justify-between items-start mb-4">
                    <div>
                      <h3 class="text-2xl font-heading text-[#1C2A3A] mb-2"><%=user.hostedEvents[i].title%></h3>
                      <div class="flex flex-wrap items-center gap-3 text-[#1C2A3A]/60 text-sm mb-3">
                        <div class="flex items-center gap-1.5">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                          </svg>
                          <span><%=user.hostedEvents[i].formattedDate.date%></span>
                        </div>
                        <div class="hidden md:block w-1 h-1 rounded-full bg-current"></div>
                        <div class="flex items-center gap-1.5">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                          </svg>
                          <span><%= user.hostedEvents[i].venueDetails.name %></span>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Stats -->
                  <div class="grid grid-cols-3 gap-4 mb-4 p-4 bg-[#F9F7F5] rounded-xl">
                    <div class="text-center">
                      <p class="text-2xl font-heading text-[#1C2A3A]"><%=user.hostedEvents[i].tickets.sold%></p>
                      <p class="text-[10px] uppercase tracking-widest text-[#1C2A3A]/40 font-bold">Sold</p>
                    </div>
                    <div class="text-center border-x border-[#1C2A3A]/10">
                      <p class="text-2xl font-heading text-[#1C2A3A]"><%=user.hostedEvents[i].tickets.remaining%></p>
                      <p class="text-[10px] uppercase tracking-widest text-[#1C2A3A]/40 font-bold">Remaining</p>
                    </div>
                    <div class="text-center">
                      <p class="text-2xl font-heading text-[#1C2A3A]">$12,250</p>
                      <p class="text-[10px] uppercase tracking-widest text-[#1C2A3A]/40 font-bold">Revenue</p>
                    </div>
                  </div>

                  <!-- Actions -->
                  <div class="flex gap-2">
                    <a href="/viewEventHost/<%=user.hostedEvents[i]._id%>" class="flex-1 px-4 py-2 bg-[#1C2A3A] text-white rounded-xl text-sm font-medium hover:bg-[#2C3E50] transition-all text-center">
                      View Event
                    </a>
                    <a href="/editEvent/<%=user.hostedEvents[i]._id%>" class="flex-1 px-4 py-2 border border-[#1C2A3A]/20 text-[#1C2A3A] rounded-xl text-sm font-medium hover:bg-white transition-all text-center">
                      Edit
                    </a>

                    <a href="/boost-event" class="px-4 py-2 bg-[#ED8842] text-white rounded-xl text-sm font-bold hover:bg-[#D97732] transition-colors shadow-lg shadow-orange-500/20 flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                      </svg>
                      Boost
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <% }else if(user.hostedEvents[i].status == 'pending') {%>

            <!-- Event Card 2 - Pending -->
            <div class="bg-white/60 backdrop-blur-xl rounded-[2.5rem] overflow-hidden shadow-sm border border-white/40">
              <div class="flex flex-col md:flex-row">
                <!-- Event Image -->
                <div class="w-full md:w-1/3 h-[275px] relative overflow-hidden rounded-lg">
                  <div class="w-full h-full flex items-center justify-center transition-transform duration-300 hover:scale-105">
                    <img src="<%= user.hostedEvents[i].galleryImages[0] %>" class="w-full h-full object-cover block" alt="<%= user.hostedEvents[i].title || 'Event' %>">
                  </div>
                  <div class="absolute top-4 left-4 bg-yellow-500/90 backdrop-blur-md px-3 py-1 rounded-full z-10">
                    <span class="text-[10px] font-bold text-white uppercase tracking-widest">Pending</span>
                  </div>
                </div>

                <!-- Event Details -->
                <div class="flex-1 p-6">
                  <div class="flex justify-between items-start mb-4">
                    <div>
                      <h3 class="text-2xl font-heading text-[#1C2A3A] mb-2"><%=user.hostedEvents[i].title%>
                      </h3>
                      <div class="flex flex-wrap items-center gap-3 text-[#1C2A3A]/60 text-sm mb-3">
                        <div class="flex items-center gap-1.5">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                            </path>
                          </svg>
                          <span><%=user.hostedEvents[i].formattedDate.date%></span>
                        </div>
                        <div class="hidden md:block w-1 h-1 rounded-full bg-current">
                        </div>
                        <div class="flex items-center gap-1.5">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z">
                            </path>
                          </svg>
                          <span><%= user.hostedEvents[i].venueDetails.name %></span>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Pending Message -->
                  <div class="mb-4 p-4 bg-orange-50 border border-orange-200 rounded-xl">
                    <div class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-orange-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <div>
                        <p class="text-sm font-bold text-orange-900 mb-1">Pending Admin
                          Approval
                        </p>
                        <p class="text-xs text-orange-800">Your event is under review.
                          You'll be
                          notified once it's approved.</p>
                      </div>
                    </div>
                  </div>

                  <!-- Actions -->
                  <div class="flex gap-2">
                    <a href="/viewEventHost/<%=user.hostedEvents[i]._id%>" class="flex-1 px-4 py-2 bg-[#1C2A3A] text-white rounded-xl text-sm font-medium hover:bg-[#2C3E50] transition-all text-center">
                      View Event
                    </a>
                    <a href="/editEvent/<%=user.hostedEvents[i]._id%>" class="flex-1 px-4 py-2 border border-[#1C2A3A]/20 text-[#1C2A3A] rounded-xl text-sm font-medium hover:bg-white transition-all text-center">
                      Edit
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <% }else if(user.hostedEvents[i].status == 'approved') {%>

            <!-- Event Card 2 - Pending -->
            <div class="bg-white/60 backdrop-blur-xl rounded-[2.5rem] overflow-hidden shadow-sm border border-white/40">
              <div class="flex flex-col md:flex-row">
                <!-- Event Image -->
                <div class="w-full md:w-1/3 h-[275px] relative overflow-hidden rounded-lg">
                  <div class="w-full h-full flex items-center justify-center transition-transform duration-300 hover:scale-105">
                    <img src="<%= user.hostedEvents[i].galleryImages[0] %>" class="w-full h-full object-cover block" alt="<%= user.hostedEvents[i].title || 'Event' %>">
                  </div>
                  <div class="absolute top-4 left-4 bg-green-400/100 backdrop-blur-md px-3 py-1 rounded-full z-10">
                    <span class="text-[10px] font-bold text-white uppercase tracking-widest">Payment Pending</span>
                  </div>
                </div>

                <!-- Event Details -->
                <div class="flex-1 p-6">
                  <div class="flex justify-between items-start mb-4">
                    <div>
                      <h3 class="text-2xl font-heading text-[#1C2A3A] mb-2"><%=user.hostedEvents[i].title%>
                      </h3>
                      <div class="flex flex-wrap items-center gap-3 text-[#1C2A3A]/60 text-sm mb-3">
                        <div class="flex items-center gap-1.5">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                            </path>
                          </svg>
                          <span><%=user.hostedEvents[i].formattedDate.date%></span>
                        </div>
                        <div class="hidden md:block w-1 h-1 rounded-full bg-current">
                        </div>
                        <div class="flex items-center gap-1.5">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z">
                            </path>
                          </svg>
                          <span><%= user.hostedEvents[i].venueDetails.name %></span>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Pending Message -->
                  <div class="mb-4 p-4 bg-orang-50 border border-green-500 rounded-xl">
                    <div class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-orange-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <div>
                        <p class="text-sm font-bold text-green-900 mb-1">Your event is approved by admin now waiting for your payment
                        </p>

                      </div>
                    </div>
                  </div>

                  <!-- Actions -->
                  <div class="flex gap-2">
                    <a href="/viewEventHost/<%=user.hostedEvents[i]._id%>" class="flex-1 px-4 py-2 bg-[#1C2A3A] text-white rounded-xl text-sm font-medium hover:bg-[#2C3E50] transition-all text-center">
                      View Event
                    </a>
                    <a href="/editEvent/<%=user.hostedEvents[i]._id%>" class="flex-1 px-4 py-2 border border-[#1C2A3A]/20 text-[#1C2A3A] rounded-xl text-sm font-medium hover:bg-white transition-all text-center">
                      Edit
                    </a>
                    <a href="/payAndPublish/<%=user.hostedEvents[i]._id%> " class="flex-1 px-4 py-2 bg-[#1C2A3A] text-white rounded-xl text-sm font-medium hover:bg-[#2C3E50] transition-all text-center">
                      Pay and Publish
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <%} else if(user.hostedEvents[i].status == 'rejected') {%>

            <!-- Event Card 3 - Rejected -->
            <div class="bg-white/60 backdrop-blur-xl rounded-[2.5rem] overflow-hidden shadow-sm border border-white/40">
              <div class="flex flex-col md:flex-row">
                <!-- Event Image -->
                <div class="w-full md:w-1/3 h-[275px] relative overflow-hidden rounded-lg">
                  <div class="w-full h-full flex items-center justify-center transition-transform duration-300 hover:scale-105">
                    <img src="<%= user.hostedEvents[i].galleryImages[0] %>" class="w-full h-full object-cover block" alt="<%= user.hostedEvents[i].title || 'Event' %>">
                  </div>
                  <div class="absolute top-4 left-4 bg-red-500/90 backdrop-blur-md px-3 py-1 rounded-full z-10">
                    <span class="text-[10px] font-bold text-white uppercase tracking-widest">Rejected</span>
                  </div>
                </div>

                <!-- Event Details -->
                <div class="flex-1 p-6">
                  <div class="flex justify-between items-start mb-4">
                    <div>
                      <h3 class="text-2xl font-heading text-[#1C2A3A] mb-2"><%= user.hostedEvents[i].title%></h3>
                      <div class="flex flex-wrap items-center gap-3 text-[#1C2A3A]/60 text-sm mb-3">
                        <div class="flex items-center gap-1.5">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                            </path>
                          </svg>
                          <span><%= user.hostedEvents[i].formattedDate.date%></span>
                        </div>
                        <div class="hidden md:block w-1 h-1 rounded-full bg-current">
                        </div>
                        <div class="flex items-center gap-1.5">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z">
                            </path>
                          </svg>
                          <span><%= user.hostedEvents[i].venueDetails.name%></span>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Rejected Message -->
                  <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-xl">
                    <div class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-red-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z">
                        </path>
                      </svg>
                      <div>
                        <p class="text-sm font-bold text-red-900 mb-1">Event Not
                          Approved</p>
                        <p class="text-xs text-red-800">Reason : <%= user.hostedEvents[i].rejectionReason%>.</p>
                      </div>
                    </div>
                  </div>

                  <!-- Actions -->
                  <div class="flex gap-2">
                    <a href="/viewEventHost/<%=user.hostedEvents[i]._id%>" class="flex-1 px-4 py-2 bg-[#1C2A3A] text-white rounded-xl text-sm font-medium hover:bg-[#2C3E50] transition-all text-center">
                      Revise & Resubmit
                    </a>

                  </div>
                </div>
              </div>
            </div>
            <%} else if(user.hostedEvents[i].status == 'completed') {%>

            <!-- Event Card 4 - Finished -->
            <div class="bg-white/60 backdrop-blur-xl rounded-[2.5rem] overflow-hidden shadow-sm border border-white/40 opacity-75 hover:opacity-100 transition-opacity">
              <div class="flex flex-col md:flex-row">
                <!-- Event Image -->
                <div class="relative md:w-72 h-48 md:h-auto overflow-hidden">
                  <img src="https://images.unsplash.com/photo-1514525253440-b393332569ca?q=80&w=600&auto=format&fit=crop" class="w-full h-full object-cover grayscale" alt="Jazz Evening">
                  <div class="absolute inset-0 bg-gradient-to-r from-[#1C2A3A]/40 to-transparent">
                  </div>
                  <div class="absolute top-4 left-4 bg-[#1C2A3A]/90 backdrop-blur-md px-3 py-1 rounded-full">
                    <span class="text-[10px] font-bold text-white uppercase tracking-widest">Finished</span>
                  </div>
                </div>

                <!-- Event Details -->
                <div class="flex-1 p-6">
                  <div class="flex justify-between items-start mb-4">
                    <div>
                      <h3 class="text-2xl font-heading text-[#1C2A3A] mb-2">Jazz Evening
                      </h3>
                      <div class="flex flex-wrap items-center gap-3 text-[#1C2A3A]/60 text-sm mb-3">
                        <div class="flex items-center gap-1.5">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                            </path>
                          </svg>
                          <span>Nov 10, 2024</span>
                        </div>
                        <div class="hidden md:block w-1 h-1 rounded-full bg-current">
                        </div>
                        <div class="flex items-center gap-1.5">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z">
                            </path>
                          </svg>
                          <span>Blue Note Jazz Club</span>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Finished Info -->
                  <p class="text-sm text-[#1C2A3A]/60 mb-4">
                    This event has ended. You can view the event details, analytics, and
                    attendee
                    reviews.
                  </p>

                  <!-- Actions -->
                  <div class="flex gap-2">
                    <a href="/view-event-host" class="flex-1 px-4 py-2 border border-[#1C2A3A]/20 text-[#1C2A3A] rounded-xl text-sm font-medium hover:bg-white transition-all text-center">
                      View Details
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <%}%>
        <%}%>
          </div>
        </div>
        <% } %>
    </main>
  </div>

</body>

</html>