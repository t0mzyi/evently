<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login — Evently</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/assets/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Italiana&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        theme: { primary: '#1C2A3A', secondary: '#4A6A78', accent: '#D4AF37', surface: '#F9F7F5' },
                        apple: { bg: '#EAE0CF' }
                    },
                    fontFamily: { heading: ['Italiana', 'serif'], sans: ['Inter', 'sans-serif'] }
                }
            }
        }
    </script>
    <style>
        .input-error { border: 1px solid #ef4444 !important; background-color: #fff5f5; }
        .error-text { color: #f87171; font-size: 10px; letter-spacing: 0.08em; margin-top: 4px; padding-left: 4px; }
        body { background-color: #EAE0CF; color: #1C2A3A; }
        .auth-card { background-color: #1C2A3A; box-shadow: 0 35px 60px -15px rgba(28, 42, 58, 0.6); border: 1px solid rgba(255, 255, 255, 0.05); }
        .input-clean { background-color: #F1F5F9; border: 1px solid transparent; color: #1C2A3A; transition: all 0.2s ease; }
        .input-clean:focus { background-color: #FFFFFF; outline: none; box-shadow: 0 0 0 2px #5C7C8A; }
        .btn-primary { background-color: #5C7C8A; color: #FFFFFF; transition: all 0.2s ease; letter-spacing: 0.05em; }
        .btn-primary:hover { background-color: #4A6A78; transform: translateY(-1px); }
        .btn-google { background-color: #FFFFFF; color: #1C2A3A; }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen p-6 font-sans relative overflow-hidden">

    <div class="absolute inset-0 pointer-events-none select-none overflow-hidden opacity-10">
        <div class="absolute top-1/2 left-1/4 w-96 h-96 bg-theme-primary rounded-full blur-3xl"></div>
    </div>

    <div class="w-full max-w-[550px] relative z-10 flex flex-col items-center">
        <div class="mb-8 text-center">
            <a href="/" class="text-7xl font-heading text-theme-primary">evently</a>
        </div>

        <div id="authCard" class="auth-card rounded-[2rem] p-12 w-full relative overflow-hidden">
            
            <div id="loginForm" class="transition-opacity duration-300">
                <div class="mb-10 text-center">
                    <h1 class="text-4xl font-heading text-white mb-2">Sign In</h1>
                    <p class="text-gray-400 text-xs font-sans">Enter details to continue</p>
                </div>
                <form class="space-y-6" id="loginForm">
                    <div class="space-y-1.5">
                        <label class="block text-[10px] font-bold uppercase tracking-widest text-gray-400 pl-1">Email</label>
                        <input type="email" id="loginEmail" name="emailAddress" class="w-full h-12 px-4 rounded-xl input-clean">
                        <p id="loginEmailError" class="error-text hidden"></p>
                    </div>
                    <div class="space-y-1.5">
                        <input type="password" id="loginPassword" name="password" placeholder="••••••••" class="w-full h-12 px-4 rounded-xl input-clean">
                        <p id="loginPasswordError" class="error-text hidden"></p>
                    </div>
                    <button id="loginBtn" type="submit" class="w-full h-12 rounded-xl btn-primary uppercase font-medium">Sign In</button>
                    <div class="relative flex items-center py-4">
                    <div class="flex-grow border-t border-gray-700"></div>
                    <span class="flex-shrink mx-4 text-[10px] text-gray-500 uppercase tracking-widest">or</span>
                    <div class="flex-grow border-t border-gray-700"></div>
                </div>

                <a href="/auth/google" class="w-full h-12 rounded-xl bg-white flex items-center justify-center gap-3 transition-all duration-200 hover:bg-gray-100 active:scale-[0.98] shadow-sm">
                    <svg class="w-5 h-5" viewBox="0 0 24 24">
                        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.66l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                    </svg>
                    <span class="text-sm font-medium text-[#1C2A3A] font-sans tracking-tight">Continue with Google</span>
                </a>
                    <div class="text-center mt-6">
                        <span class="text-xs text-gray-400">New around here?</span>
                        <button type="button" onclick="toggleAuth(true)" class="text-xs text-white font-semibold hover:underline ml-1">Create account</button>
                    </div>
                </form>
            </div>

            <div id="registerForm" class="hidden transition-opacity duration-300">
                <div class="mb-8 text-center">
                    <h1 class="text-4xl font-heading text-white mb-2">Create Account</h1>
                    <p class="text-gray-400 text-xs font-sans">Join us and start exploring</p>
                </div>
                <form class="space-y-4">
                    <div class="grid grid-cols-2 gap-3">
                        <div class="space-y-1.5">
                            <label class="block text-[10px] font-bold uppercase text-gray-400 pl-1">First Name</label>
                            <input type="text" id="firstName" name="firstName" class="w-full h-12 px-4 rounded-xl input-clean">
                            <p id="firstNameError" class="error-text hidden"></p>
                        </div>
                        <div class="space-y-1.5">
                            <label class="block text-[10px] font-bold uppercase text-gray-400 pl-1">Last Name</label>
                            <input type="text" id="lastName" name="lastName" class="w-full h-12 px-4 rounded-xl input-clean">
                            <p id="lastNameError" class="error-text hidden"></p>
                        </div>
                    </div>
                    <div class="space-y-1.5">
                        <label class="block text-[10px] font-bold uppercase text-gray-400 pl-1">Email</label>
                        <input type="email" id="registerEmail" name="emailAddress" class="w-full h-12 px-4 rounded-xl input-clean">
                        <p id="registerEmailError" class="error-text hidden"></p>
                    </div>
                    <div class="space-y-1.5">
                        <label class="block text-[10px] font-bold uppercase text-gray-400 pl-1">Password</label>
                        <input type="password" id="registerPassword" name="password" class="w-full h-12 px-4 rounded-xl input-clean">
                        <p id="registerPasswordError" class="error-text hidden"></p>
                    </div>
                    <div class="space-y-1.5">
                        <label class="block text-[10px] font-bold uppercase text-gray-400 pl-1">Confirm Password</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" class="w-full h-12 px-4 rounded-xl input-clean">
                        <p id="confirmPasswordError" class="error-text hidden"></p>
                    </div>
                    <button type="submit" id="createAccountbtn" 
                        class="w-full h-12 rounded-xl btn-primary mt-4 uppercase font-medium 
                            disabled:opacity-50 disabled:cursor-not-allowed disabled:pointer-events-none">
                        Create Account
                    </button>
                    <a href="/auth/google" class="w-full h-12 rounded-xl bg-white flex items-center justify-center gap-3 transition-all duration-200 hover:bg-gray-100 active:scale-[0.98] shadow-sm">
                    <svg class="w-5 h-5" viewBox="0 0 24 24">
                        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.66l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                    </svg>
                    <span class="text-sm font-medium text-[#1C2A3A] font-sans tracking-tight">Continue with Google</span>
                </a>
                    <div id="registerServerMessage"
                        class="hidden mt-3 text-center text-xs tracking-widest uppercase font-semibold">
                    </div>
                    <div class="text-center mt-6">
                        <span class="text-xs text-gray-400">Already a member?</span>
                        <button type="button" onclick="toggleAuth(false)" class="text-xs text-white font-semibold hover:underline ml-1">Sign in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // 1. Initial Mode Detection
        const INITIAL_MODE = "<%= typeof mode !== 'undefined' ? mode : 'login' %>";
        const myButton = document.getElementById('createAccountbtn')
        



        //login thingss
        const loginForm = document.getElementById('loginForm')
        const loginEmailInput = document.getElementById('loginEmail')
        const loginPasswordInput = document.getElementById('loginPassword')
        const loginBtn = document.getElementById('loginBtn')
        const loginPassError = document.getElementById('loginPasswordError')
        const loginEmailError = document.getElementById('loginEmailError')


        loginForm.addEventListener('submit',async (e) => {
            e.preventDefault()

            clearError(loginEmailInput, loginEmailError);
            clearError(loginPasswordInput, loginPassError);

            const emailValue = loginEmailInput.value.trim()
            const passwordValue = loginPasswordInput.value

            let valid = true
            if (!emailValue || !isValidEmail(emailValue)) {
                showError(loginEmailInput, loginEmailError, "ENTER VALID EMAIL");
                valid = false
            }
            if(!passwordValue){
                showError(loginEmailInput,loginPasswordError,"ENTER PASSWORD")
                valid = false
            }

            if(valid){
                loginBtn.disabled = true
                loginBtn.textContent = "Checking...";
                loginBtn.classList.add('opacity-50', 'cursor-not-allowed');
                try{
                    const response = await fetch('/signIn', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ 
                            emailAddress: emailValue, 
                            password: passwordValue 
                        })
                    })
                    const result = await response.json()
                    if(response.ok && result.success){
                        window.location.href = result.redirectUrl
                    }else {
                    showError(loginPasswordInput, loginPassError, result.message || "LOGIN FAILED");
                    loginBtn.disabled = false;
                    loginBtn.textContent = "Sign In";
                    loginBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                    }
                
                }catch (err) {
                    console.error('Login Error:', err);
                    showError(loginPasswordInput, loginPassError, "NETWORK ERROR");
                    loginBtn.disabled = false
                    loginBtn.textContent = "Sign In";
                    loginBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                }
            }
        })















        function toggleAuth(showRegister) {
            const loginForm = document.getElementById('loginForm');
            const registerForm = document.getElementById('registerForm');
            const title = document.querySelector('title');

            if (showRegister) {
                loginForm.classList.add('hidden');
                registerForm.classList.remove('hidden');
                title.textContent = 'Register — Evently';
            } else {
                loginForm.classList.remove('hidden');
                registerForm.classList.add('hidden');
                title.textContent = 'Login — Evently';
            }
        }

        //error divvv
        const messageEl = document.getElementById('registerServerMessage');

        function showServerMessage(el, message, isError = false) {
            el.textContent = message;
            el.classList.remove('hidden');
            el.classList.toggle('text-red-400', isError);
            el.classList.toggle('text-green-400', !isError);
        }


        // Run on load
        if (INITIAL_MODE === 'register') toggleAuth(true);

        // 2. Validation Utilities
        function showError(input, errorEl, message) {
            input.classList.add('input-error');
            errorEl.textContent = message;
            errorEl.classList.remove('hidden');
        }

        function clearError(input, errorEl) {
            input.classList.remove('input-error');
            errorEl.classList.add('hidden');
        }

        function isValidEmail(email) { return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email); }

        // 3. Register Submission with Validation
        document.querySelector('#registerForm form').addEventListener('submit', async function(e) {
            e.preventDefault();
            let valid = true;

            const fields = {
                firstName: document.getElementById('firstName'),
                lastName: document.getElementById('lastName'),
                email: document.getElementById('registerEmail'),
                password: document.getElementById('registerPassword'),
                confirm: document.getElementById('confirmPassword')
            };

            const errors = {
                firstName: document.getElementById('firstNameError'),
                lastName: document.getElementById('lastNameError'),
                email: document.getElementById('registerEmailError'),
                password: document.getElementById('registerPasswordError'),
                confirm: document.getElementById('confirmPasswordError')
            };

            // Clear all
            Object.keys(fields).forEach(key => clearError(fields[key], errors[key]));

            // Validate
            if (!fields.firstName.value.trim()) { showError(fields.firstName, errors.firstName, 'REQUIRED'); valid = false; }
            if (!fields.lastName.value.trim()) { showError(fields.lastName, errors.lastName, 'REQUIRED'); valid = false; }
            if (!isValidEmail(fields.email.value)) { showError(fields.email, errors.email, 'INVALID EMAIL'); valid = false; }
            if (fields.password.value.length < 6) { showError(fields.password, errors.password, 'MIN 6 CHARS'); valid = false; }
            if (fields.password.value !== fields.confirm.value) { showError(fields.confirm, errors.confirm, 'NO MATCH'); valid = false; }

            if (valid) {
                const formData = {
                    firstName: fields.firstName.value,
                    lastName: fields.lastName.value,
                    emailAddress: fields.email.value,
                    password: fields.password.value
                };
                const submitBtn = document.getElementById('createAccountbtn');
                submitBtn.disabled = true;
                submitBtn.textContent = "Sending OTP..."; 
                submitBtn.classList.add('opacity-50', 'cursor-not-allowed');

                try {
                    const response = await fetch('/signUp', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(formData)
                    });
                    const result = await response.json();
                    if(response.ok && result.success){
                        window.location.href = result.redirectUrl;
                    } else {
                        submitBtn.disabled = false;
                        submitBtn.textContent = "Create Account";
                        submitBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                        showServerMessage(
                            messageEl,
                            result.message || 'REGISTRATION FAILED',
                            true
                        );
                    }        
                    
                } catch (err) {
                    submitBtn.disabled = false;
                    submitBtn.textContent = "Create Account";
                    submitBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                     showServerMessage(messageEl,'NETWORK ERROR. PLEASE TRY AGAIN.',true);
                }
            }
        });
    </script>
</body>
</html>