<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password â€” Evently</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/assets/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Italiana&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        theme: { primary: '#1C2A3A', secondary: '#4A6A78', accent: '#D4AF37', surface: '#F9F7F5' },
                        apple: { bg: '#EAE0CF' }
                    },
                    fontFamily: { heading: ['Italiana', serif], sans: ['Inter', 'sans-serif'] },
                    animation: { 'float': 'float 6s ease-in-out infinite' },
                    keyframes: { float: { '0%, 100%': { transform: 'translateY(0)' }, '50%': { transform: 'translateY(-10px)' } } }
                }
            }
        }
    </script>
    <style>
        body { background-color: #EAE0CF; color: #1C2A3A; }
        .auth-card { background-color: #1C2A3A; box-shadow: 0 35px 60px -15px rgba(28, 42, 58, 0.6); border: 1px solid rgba(255, 255, 255, 0.05); }
        .input-clean { background-color: #F1F5F9; border: 1px solid transparent; color: #1C2A3A; transition: all 0.2s ease; }
        .input-clean:focus { background-color: #FFFFFF; outline: none; box-shadow: 0 0 0 2px #5C7C8A; }
        .btn-primary { background-color: #5C7C8A; color: #FFFFFF; transition: all 0.2s ease; letter-spacing: 0.05em; }
        .btn-primary:hover { background-color: #4A6A78; transform: translateY(-1px); }
        .input-error { border: 1px solid #ef4444 !important; background-color: #fff5f5; }
        .error-text { color: #f87171; font-size: 10px; letter-spacing: 0.08em; margin-top: 4px; padding-left: 4px; }
    </style>
</head>

<body class="flex items-center justify-center min-h-screen p-6 font-sans relative overflow-hidden">
    <%- include('../partials/toast') %>

    <div class="w-full max-w-[550px] relative z-10 flex flex-col items-center">
        <div class="mb-8 text-center transform hover:scale-105 transition-transform duration-500">
            <a href="/" class="text-7xl font-heading text-theme-primary">evently</a>
        </div>

        <div id="formContainer" class="auth-card rounded-[2rem] p-12 w-full relative overflow-hidden">
            <div class="mb-10 text-center">
                <h1 class="text-4xl font-heading text-white mb-2">
                    <%= (user && !user.password) ? 'Create Password' : 'New Password' %>
                </h1>
                <p class="text-gray-400 text-xs font-sans tracking-wide">
                    <%= (user && !user.password) ? 'Enable email login for your account' : 'Enter a new password to secure your account' %>
                </p>
            </div>

            <form class="space-y-5" id="formId" novalidate>
                <div class="space-y-1.5 relative">
                    <label class="block text-[10px] font-bold uppercase tracking-widest text-gray-400 pl-1">New Password</label>
                    <div class="relative">
                        <input id="password" type="password" class="w-full h-12 px-4 pr-12 rounded-xl input-clean text-sm font-sans" required>
                        <button type="button" onclick="togglePass('password', this)" class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-theme-primary">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                        </button>
                    </div>
                    <p id="passwordError" class="error-text hidden"></p>
                </div>

                <div class="space-y-1.5">
                    <label class="block text-[10px] font-bold uppercase tracking-widest text-gray-400 pl-1">Confirm Password</label>
                    <div class="relative">
                        <input id="confirmPass" type="password" class="w-full h-12 px-4 pr-12 rounded-xl input-clean text-sm font-sans" required>
                        <button type="button" onclick="togglePass('confirmPass', this)" class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-theme-primary">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                        </button>
                    </div>
                    <p id="confirmPasswordError" class="error-text hidden"></p>
                </div>

                <button type="submit" id="verifyBtn" class="w-full h-12 rounded-xl btn-primary mt-4 uppercase font-medium disabled:opacity-50 disabled:cursor-not-allowed">
                    Update Password
                </button>
            </form>
        </div>
    </div>

    <script>
        function togglePass(id, btn) {
            const input = document.getElementById(id);
            const isPass = input.type === 'password';
            input.type = isPass ? 'text' : 'password';
            btn.classList.toggle('text-theme-secondary', isPass);
        }

        const resetPassForm = document.getElementById('formId');
        const passInput = document.getElementById('password');
        const confirmInput = document.getElementById('confirmPass');
        const verifyBtn = document.getElementById('verifyBtn');

        resetPassForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Reset Errors
            [passInput, confirmInput].forEach(el => el.classList.remove('input-error'));
            document.querySelectorAll('.error-text').forEach(el => el.classList.add('hidden'));

            const passValue = passInput.value.trim();
            const confirmValue = confirmInput.value.trim();
            let valid = true;

            if (passValue.length < 6) {
                showErr(passInput, 'passwordError', "MINIMUM 6 CHARACTERS REQUIRED");
                valid = false;
            }
            if (passValue !== confirmValue) {
                showErr(confirmInput, 'confirmPasswordError', "PASSWORDS DO NOT MATCH");
                valid = false;
            }

            if (valid) {
                verifyBtn.disabled = true;
                verifyBtn.textContent = "Updating...";
                
                try {
                    const response = await fetch('/reset-password', {
                        method: 'PATCH',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ newPassword: passValue })
                    });

                    const result = await response.json();
                    
                    if (response.ok && result.success) {
                        const isEditing = "<%= user ? 'true' : 'false' %>";
                        if (isEditing === 'true') {
                            window.location.href = "/dashboard?status=success&message=Security updated successfully";
                        } else {
                            window.location.href = "/signIn?status=success&message=Password reset successful. Please login.";
                        }
                    } else {
                        throw new Error(result.message || "Update Failed");
                    }
                } catch (err) {
                    verifyBtn.disabled = false;
                    verifyBtn.textContent = "Update Password";
                    showErr(confirmInput, 'confirmPasswordError', err.message.toUpperCase());
                }
            }
        });

        function showErr(input, errorId, msg) {
            input.classList.add('input-error');
            const errEl = document.getElementById(errorId);
            errEl.textContent = msg;
            errEl.classList.remove('hidden');
        }
    </script>
</body>
</html>