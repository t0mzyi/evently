<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Tickets â€” Evently</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="stylesheet" href="/assets/css/styles.css">
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            theme: {
              primary: '#1C2A3A',
              highlight: '#2C3E50',
              accent: '#ED8842',
              surface: '#F9F7F5'
            },
          },
          fontFamily: {
            heading: ['Fraunces', 'serif'],
            sans: ['Inter', 'sans-serif']
          },
          animation: {
            'fade-in': 'fadeIn 0.5s ease-out forwards',
            'slide-up': 'slideUp 0.5s ease-out forwards',
          },
          keyframes: {
            fadeIn: {
              '0%': {
                opacity: '0'
              },
              '100%': {
                opacity: '1'
              },
            },
            slideUp: {
              '0%': {
                opacity: '0',
                transform: 'translateY(20px)'
              },
              '100%': {
                opacity: '1',
                transform: 'translateY(0)'
              },
            }
          }
        }
      }
    }
  </script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,300;400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
  <style>
    .custom-radio:checked+div {
      border-color: #1C2A3A;
      background-color: rgba(28, 42, 58, 0.05);
    }

    .custom-radio:checked+div .radio-circle {
      border-color: #1C2A3A;
    }

    .custom-radio:checked+div .radio-dot {
      opacity: 1;
    }

    .vip-radio:checked+div {
      border-color: #ED8842;
      background-color: rgba(237, 136, 66, 0.05);
    }

    .vip-radio:checked+div .radio-circle {
      border-color: #ED8842;
    }

    .vip-radio:checked+div .radio-dot {
      opacity: 1;
      background-color: #ED8842;
    }

    .swal2-container {
      z-index: 10000;
    }

    .swal2-popup {
      border-radius: 2rem !important;
      padding: 2rem !important;
      font-family: 'Inter', sans-serif !important;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15) !important;
      border: 1px solid rgba(255, 255, 255, 0.4) !important;
    }

    .swal2-title {
      font-family: 'Fraunces', serif !important;
      font-weight: 600 !important;
      color: #1C2A3A !important;
    }

    .swal2-confirm {
      background-color: #1C2A3A !important;
      border-radius: 0.75rem !important;
      padding: 0.75rem 2rem !important;
      font-weight: 600 !important;
      transition: all 0.3s ease !important;
    }

    @keyframes ticketBoost {
      0% {
        transform: translateY(0) rotate(0deg);
      }

      20% {
        transform: translateY(5px) rotate(-5deg);
      }

      40% {
        transform: translateY(-5px) rotate(5deg);
      }

      60% {
        transform: translateY(0) scale(1.1);
      }

      100% {
        transform: translateY(-100vh) scale(0.5);
        opacity: 0;
      }
    }

    .ticket-icon-anim {
      display: inline-block;
      font-size: 50px;
      animation: ticketBoost 0.8s ease-in infinite;
    }

    .launch-stage {
      height: 140px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: #f8f9fa;
      border-radius: 20px;
      margin-top: 10px;
    }
  </style>
</head>

<body class="bg-[#EAE0CF] min-h-screen font-sans selection:bg-[#ED8842] m-5 selection:text-white">

  <%- include('../../partials/navbar') %>

  <main class="pt-32 pb-16 px-6 max-w-7xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-white/60 backdrop-blur-xl rounded-[2rem] p-8 border border-white/40 shadow-sm animate-slide-up" style="animation-delay: 0.1s;">
          <div class="flex flex-col md:flex-row gap-8 items-start">
            <img src="<%= event.galleryImages && event.galleryImages.length > 0 ? event.galleryImages[0] : '/assets/images/placeholder.jpg' %>" class="w-full md:w-48 h-48 rounded-2xl object-cover shadow-md" alt="<%= event.title %>">
            <div class="flex-1 space-y-4">
              <div>
                <h1 class="text-3xl md:text-4xl font-heading font-medium text-[#1C2A3A] mb-2 leading-tight">
                  <%= event.title %>
                </h1>
                <p class="text-[#1C2A3A]/70 text-lg">
                  <%= event.description %>
                </p>
              </div>

              <div class="flex flex-wrap gap-4 text-sm font-medium text-[#1C2A3A]/80">
                <div class="flex items-center gap-2 bg-white/50 px-4 py-2 rounded-full border border-white/60">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <span>
                    <%= new Date(event.startDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %> â€¢
                    <%= new Date(event.startDate).toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' }) %>
                  </span>
                </div>
                <div class="flex items-center gap-2 bg-white/50 px-4 py-2 rounded-full border border-white/60">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  </svg>
                  <span><%= event.venueDetails.name %>, <%= event.venueDetails.city %></span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white/60 backdrop-blur-xl rounded-[2rem] p-8 border border-white/40 shadow-sm animate-slide-up" style="animation-delay: 0.2s;">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-2xl font-heading font-medium text-[#1C2A3A]">Select Tickets</h2>
            <span class="text-sm font-medium text-[#1C2A3A]/50 bg-white/40 px-3 py-1 rounded-full border border-white/40">Max 10 tickets</span>
          </div>

          <div class="space-y-4" id="ticket-options">
            <% event.ticketTypes.forEach((ticket, index)=> { %>
            <% if (ticket.isActive) { %>
            <label class="block relative cursor-pointer group transition-transform active:scale-[0.99]">
              <input type="radio" name="ticketType" value="<%= index %>" class="<%= ticket.name.toLowerCase().includes('vip') ? 'vip-radio' : 'custom-radio' %> peer sr-only" onchange="selectTicketType(<%= index %>)">
              <div class="flex items-center justify-between p-5 rounded-2xl border <%= ticket.name.toLowerCase().includes('vip') ? 'border-[#ED8842]/30 bg-[#ED8842]/5 hover:bg-[#ED8842]/10' : 'border-[#1C2A3A]/10 bg-white/40 hover:bg-white/60' %> transition-all shadow-sm">
                <div class="flex items-center gap-5">
                  <div class="radio-circle w-6 h-6 rounded-full border-2 <%= ticket.name.toLowerCase().includes('vip') ? 'border-[#ED8842]/40' : 'border-[#1C2A3A]/20' %> flex items-center justify-center bg-white">
                    <div class="radio-dot w-3 h-3 rounded-full <%= ticket.name.toLowerCase().includes('vip') ? 'bg-[#ED8842]' : 'bg-[#1C2A3A]' %> opacity-0 transition-opacity"></div>
                  </div>
                  <div>
                    <p class="font-bold text-[#1C2A3A] text-lg"><%= ticket.name %></p>
                    <p class="text-sm text-[#1C2A3A]/60 font-medium">
                      <%= ticket.description || 'Standard Access' %> || Left: <%= ticket.quantityAvailable %>
                    </p>
                  </div>
                </div>
                <p class="text-xl font-bold <%= ticket.name.toLowerCase().includes('vip') ? 'text-[#ED8842]' : 'text-[#1C2A3A]' %>">
                  <%= ticket.isFree ? 'Free' : 'â‚¹' + ticket.price.toFixed(2) %>
                </p>
              </div>
            </label>
            <% } %>
            <% }); %>
          </div>

          <div id="quantity-selector" class="hidden mt-8 pt-8 border-t border-[#1C2A3A]/10 flex items-center justify-between animate-fade-in">
            <div>
              <span class="font-bold text-[#1C2A3A] block text-lg">Quantity</span>
              <span class="text-sm text-[#1C2A3A]/50 font-medium">Select number of tickets</span>
            </div>
            <div class="flex items-center gap-5 bg-white/50 p-2 rounded-2xl border border-[#1C2A3A]/5 shadow-inner">
              <button onclick="updateGlobalQuantity(-1)" id="qty-minus" class="w-12 h-12 rounded-xl bg-white text-[#1C2A3A] shadow-sm border border-gray-100 flex items-center justify-center disabled:opacity-50">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M20 12H4"></path>
                </svg>
              </button>
              <span id="global-qty" class="w-8 text-center font-heading font-bold text-2xl text-[#1C2A3A]">1</span>
              <button onclick="updateGlobalQuantity(1)" id="qty-plus" class="w-12 h-12 rounded-xl bg-[#1C2A3A] text-white shadow-lg flex items-center justify-center disabled:opacity-50">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"></path>
                </svg>
              </button>
            </div>
          </div>
          <p id="max-limit-msg" class="hidden text-right text-xs font-bold text-red-500 mt-2 animate-pulse"></p>
        </div>
      </div>

      <div class="lg:col-span-1">
        <div class="bg-white/60 backdrop-blur-xl rounded-[2rem] p-8 border border-white/40 shadow-sm sticky top-32 animate-slide-up" style="animation-delay: 0.3s;">
          <h2 class="text-xl font-heading font-medium text-[#1C2A3A] mb-8">Order Summary</h2>
          <div class="space-y-6 mb-8">
            <div id="cart-item" class="hidden pb-6 border-b border-[#1C2A3A]/10">
              <div class="flex justify-between mb-2">
                <span class="text-[#1C2A3A] font-medium" id="summary-name">Ticket</span>
                <span class="font-bold text-[#1C2A3A]">â‚¹<span id="summary-total">0.00</span></span>
              </div>
              <p class="text-sm font-medium text-[#1C2A3A]/50 bg-[#1C2A3A]/5 px-2 py-1 rounded-md inline-block">
                <span id="summary-qty">0</span> Ã— â‚¹<span id="summary-price">0.00</span>
              </p>
            </div>
            <div id="empty-cart" class="text-center py-12 border-2 border-dashed border-[#1C2A3A]/10 rounded-2xl">
              <p class="text-sm font-bold text-[#1C2A3A]/40">No tickets selected</p>
            </div>
          </div>
          <div class="space-y-3 pt-2">
            <div class="flex justify-between text-sm">
              <span class="text-[#1C2A3A]/60 font-medium">Subtotal</span>
              <span class="font-bold text-[#1C2A3A]">â‚¹<span id="subtotal">0.00</span></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-[#1C2A3A]/60 font-medium">Service Fee (2.5%)</span>
              <span class="font-bold text-[#1C2A3A]">â‚¹<span id="service-fee">0.00</span></span>
            </div>
            <div class="flex justify-between text-xl font-heading font-bold pt-6 mt-4 border-t border-[#1C2A3A]/10">
              <span class="text-[#1C2A3A]">Total</span>
              <span class="text-[#1C2A3A]">â‚¹<span id="total">0.00</span></span>
            </div>
          </div>
          <button onclick="proceedToCheckout()" id="checkout-btn" class="w-full mt-8 bg-[#1C2A3A] text-white rounded-xl py-4 font-bold text-sm shadow-xl hover:bg-[#2C3E50] transition-all disabled:opacity-50">
            Proceed to Checkout
          </button>
        </div>
      </div>
    </div>
  </main>

  <script>
    const availableTickets = <%- JSON.stringify(event.ticketTypes || []) %>;
    const eventId = "<%= event._id %>";
    let selectedTicket = null;
    let quantity = 1;
    const GLOBAL_MAX_QUANTITY = 10;

    function selectTicketType(index) {
      selectedTicket = availableTickets[index];
      quantity = 1;
      document.getElementById('quantity-selector').classList.remove('hidden');
      updateUI();
    }

    function updateGlobalQuantity(change) {
      if (!selectedTicket) return;
      const effectiveMax = Math.min(GLOBAL_MAX_QUANTITY, selectedTicket.quantityAvailable ?? GLOBAL_MAX_QUANTITY);
      const newQty = quantity + change;
      if (newQty >= 1 && newQty <= effectiveMax) {
        quantity = newQty;
        updateUI();
      }
    }

    function updateUI() {
      if (!selectedTicket) return;
      const effectiveMax = Math.min(GLOBAL_MAX_QUANTITY, selectedTicket.quantityAvailable ?? GLOBAL_MAX_QUANTITY);
      document.getElementById('global-qty').textContent = quantity;

      const maxMsg = document.getElementById('max-limit-msg');
      if (quantity >= effectiveMax) {
        maxMsg.textContent = `Max limit reached (${effectiveMax})`;
        maxMsg.classList.remove('hidden');
      } else {
        maxMsg.classList.add('hidden');
      }

      const price = selectedTicket.isFree ? 0 : selectedTicket.price;
      const subtotal = price * quantity;
      const fee = subtotal * 0.025;
      const total = subtotal + fee;

      document.getElementById('summary-name').textContent = selectedTicket.name;
      document.getElementById('summary-price').textContent = price.toFixed(2);
      document.getElementById('summary-qty').textContent = quantity;
      document.getElementById('summary-total').textContent = subtotal.toFixed(2);
      document.getElementById('subtotal').textContent = subtotal.toFixed(2);
      document.getElementById('service-fee').textContent = fee.toFixed(2);
      document.getElementById('total').textContent = total.toFixed(2);

      document.getElementById('cart-item').classList.remove('hidden');
      document.getElementById('empty-cart').classList.add('hidden');
      document.getElementById('checkout-btn').disabled = false;
    }

    async function proceedToCheckout() {
      if (!selectedTicket) return;

      const subtotal = (selectedTicket.isFree ? 0 : selectedTicket.price) * quantity;
      const bookingData = {
        eventId,
        ticketId: selectedTicket._id,
        ticketName: selectedTicket.name,
        quantity,
        subtotal,
        serviceFee: subtotal * 0.025,
        total: subtotal * 1.025
      };

      Swal.fire({
        html: `
          <div class="launch-stage">
            <div class="ticket-icon-anim">ðŸŽ«</div>
            <p class="text-[#1C2A3A] font-bold text-lg mt-4">Confirming Seats...</p>
          </div>
        `,
        showConfirmButton: false,
        allowOutsideClick: false,
        customClass: {
          popup: '!bg-white !rounded-[30px]'
        }
      });

      try {
        const res = await fetch('/bookTickets', {
          method: "POST",
          body: JSON.stringify(bookingData),
          headers: {
            "Content-Type": "application/json"
          },
        });
        const data = await res.json();
        if (data.success) {
          setTimeout(() => {
            window.location.href = `/ticket/checkout/${data.orderId}`;
          }, 800);
        } else {
          Swal.fire({
            title: 'Sold Out!',
            text: data.message,
            icon: 'error'
          });
        }
      } catch (err) {
        Swal.fire({
          title: 'Error',
          text: 'Connection failed',
          icon: 'error'
        });
      }
    }

    window.addEventListener('DOMContentLoaded', () => {
      document.getElementById('checkout-btn').disabled = true;
    });
  </script>
</body>

</html>