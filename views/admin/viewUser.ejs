    <main class="pt-32 pb-16 px-6 max-w-7xl mx-auto">
      <!-- Back Button & Title -->
      <div class="flex items-center gap-4 mb-8">
        <a
          href="/admin/users"
          class="w-10 h-10 rounded-full bg-white/60 flex items-center justify-center hover:bg-white transition-colors shadow-sm"
        >
          <svg
            class="w-5 h-5 text-[#1C2A3A]"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"
            ></path>
          </svg>
        </a>
        <div>
          <h1 class="text-3xl font-heading font-medium tracking-tight">
            User Details
          </h1>
          <p class="text-[#1C2A3A]/60">
            Detailed view of <%= user.firstName %>'s profile
          </p>
        </div>
      </div>

      <div class="gap-8">
        <!-- Left Column: Profile & Stats -->
        <div class="space-y-6">
          <!-- Profile Card -->
          <div
            class="bg-white/60 backdrop-blur-xl rounded-[2rem] p-8 border border-white/40 shadow-sm text-center"
          >
            <div
              class="w-24 h-24 rounded-full bg-[#1C2A3A] flex items-center justify-center text-white text-3xl font-heading mx-auto mb-4 overflow-hidden"
            >
              <img src="<%= user.avatarUrl %>" alt="" srcset="" />
            </div>
            <h2 class="text-xl font-bold font-heading text-[#1C2A3A]">
              <%= user.firstName + " " + user.lastName%>
            </h2>

            <% if(!user.isBlocked) {%>
            <div
              class="inline-flex items-center px-3 py-1 rounded-full bg-green-500/10 text-green-700 text-xs font-bold uppercase tracking-wider mb-6"
            >
              Active Account
            </div>
            <% }else{ %>
            <div
              class="inline-flex items-center px-3 py-1 rounded-full bg-red-500/10 text-red-700 text-xs font-bold uppercase tracking-wider mb-6"
            >
              Blocked
            </div>
            <% } %>
            <div class="mb-6"></div>

            <div
              class="text-left space-y-3 pt-6 pb-3 border-t border-[#1C2A3A]/10"
            >
              <div>
                <p
                  class="text-[10px] font-bold uppercase tracking-widest text-[#1C2A3A]/40 mb-1"
                >
                  Email Address
                </p>
                <p class="text-sm font-medium"><%= user.emailAddress %></p>
              </div>
              <div>
                <p
                  class="text-[10px] font-bold uppercase tracking-widest text-[#1C2A3A]/40 mb-1"
                >
                  Joined Date
                </p>
                <p class="text-sm font-medium">
                  <%= new Date(user.createdAt).toLocaleDateString("en-US", {
                  month: "short", day: "numeric", year: "numeric" }) %>
                </p>
              </div>
              <div>
                <p
                  class="text-[10px] font-bold uppercase tracking-widest text-[#1C2A3A]/40 mb-1"
                >
                  Bio
                </p>
                <p class="text-sm font-medium"><%= user.bio %></p>
              </div>
            </div>
            <div class="text-left space-y-3 pt-6 border-t border-[#1C2A3A]/10">
              <div>
                <p class="text-sm font-medium">
                  Attended : <%= user.attentedCount %>
                </p>
                <p class="text-sm font-medium">
                  Hosted : <%= user.hostedCount %>
                </p>
              </div>
            </div>
          </div>

          <!-- Wallet Summary -->
          <div
            class="bg-[#1C2A3A] text-white rounded-[2rem] p-8 shadow-xl relative overflow-hidden"
          >
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-white/5 rounded-full blur-3xl -mr-10 -mt-10"
            ></div>
            <div class="flex items-center gap-3 mb-6">
              <div
                class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center"
              >
                <svg
                  class="w-5 h-5 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
                  ></path>
                </svg>
              </div>
              <h3 class="font-heading text-lg">Wallet & Earnings</h3>
            </div>

            <div class="mb-6">
              <p
                class="text-white/60 text-xs font-bold uppercase tracking-widest mb-1"
              >
                Current Balance
              </p>
              <p class="text-3xl font-heading font-medium">$12,250.00</p>
            </div>

            <div class="grid grid-cols-2 gap-4 mb-6">
              <div class="p-3 rounded-xl bg-white/5 border border-white/10">
                <p
                  class="text-white/40 text-[10px] font-bold uppercase tracking-widest mb-1"
                >
                  Total Earned
                </p>
                <p class="text-lg font-bold">$45,000</p>
              </div>
              <div class="p-3 rounded-xl bg-white/5 border border-white/10">
                <p
                  class="text-white/40 text-[10px] font-bold uppercase tracking-widest mb-1"
                >
                  Pending
                </p>
                <p class="text-lg font-bold">$3,450</p>
              </div>
            </div>

            <button
              class="w-full py-3 bg-white text-[#1C2A3A] rounded-xl font-bold hover:bg-white/90 transition-colors text-sm"
            >
              View Transaction History
            </button>
          </div>
        </div>

