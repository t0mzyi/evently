<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard — Evently</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link rel="stylesheet" href="/assets/css/styles.css" />
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            theme: {
              primary: "#1C2A3A",
              highlight: "#2C3E50",
              accent: "#ED8842",
              surface: "#F9F7F5",
            },
          },
          fontFamily: {
            heading: ["Fraunces", "serif"],
            sans: ["Inter", "sans-serif"],
          },
        },
      },
    };
  </script>
  <link href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,300;400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
</head>

<body class="bg-[#EAE0CF] text-[#1C2A3A] min-h-screen">
  <div class="fixed top-6 w-full z-50 px-4 md:px-6">
    <nav class="max-w-7xl mx-auto bg-[#1C2A3A] rounded-full h-16 px-6 flex items-center justify-between shadow-2xl">
      <div class="flex items-center gap-6">
        <span class="text-xl font-bold tracking-tight text-white font-heading">evently admin</span>
        <div class="hidden md:flex items-center gap-6 text-xs font-bold uppercase tracking-widest text-white/80">
          <a href="/admin/dashboard" class="text-white">Dashboard</a>
          <a href="/admin/events" class="hover:text-white transition-colors">Events</a>
          <a href="/admin/users" class="hover:text-white transition-colors">Users</a>
          <a href="/admin/venues" class="hover:text-white transition-colors">Venues</a>
        </div>
      </div>
      <div class="flex items-center gap-4 text-white/70 text-sm">Admin</div>
    </nav>
  </div>

  <main class="pt-32 pb-16 px-6 max-w-7xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      <div class="bg-white/40 backdrop-blur-xl rounded-[2rem] p-6 border border-white/20 shadow-sm">
        <div class="flex items-center justify-between mb-4">
          <div class="w-10 h-10 rounded-xl bg-[#1C2A3A]/10 flex items-center justify-center text-[#1C2A3A]">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </div>
          <span class="text-[10px] font-bold text-[#1C2A3A]/40 uppercase tracking-widest">Growth</span>
        </div>

        <p class="text-3xl font-heading font-bold mb-1">
          <%= users.totalUsers %>
        </p>
        <p class="text-[10px] uppercase tracking-widest text-[#1C2A3A]/40 font-bold mb-4">
          Total Users
        </p>

        <div class="flex items-center justify-between pt-4 border-t border-[#1C2A3A]/5">
          <div class="flex items-center gap-2">
            <div class="w-1.5 h-1.5 rounded-full bg-green-500"></div>
            <span class="text-[10px] font-bold text-[#1C2A3A] uppercase tracking-tighter">
              <%= users.activeUsers %> Active
            </span>
          </div>

          <div class="flex items-center gap-2">
            <div class="w-1.5 h-1.5 rounded-full bg-red-500"></div>
            <span class="text-[10px] font-bold text-[#1C2A3A]/60 uppercase tracking-tighter">
              <%= users.blockedUsers %> Blocked
            </span>
          </div>
        </div>
      </div>
      <div class="bg-white/40 backdrop-blur-xl rounded-[2rem] p-6 border border-white/20 shadow-sm">
        <div class="flex items-center justify-between mb-4">
          <div class="w-10 h-10 rounded-xl bg-[#ED8842]/10 flex items-center justify-center text-[#ED8842]">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <span class="text-[10px] font-bold text-green-600 uppercase">+8%</span>
        </div>
        <p class="text-3xl font-heading font-bold mb-1">
          <%= events.totalEvents %>
        </p>
        <p class="text-[10px] uppercase tracking-widest text-[#1C2A3A]/40 font-bold">
          Total Events
        </p>
      </div>
      <div class="bg-white/40 backdrop-blur-xl rounded-[2rem] p-6 border border-white/20 shadow-sm">
        <div class="flex items-center justify-between mb-4">
          <div class="w-10 h-10 rounded-xl bg-yellow-500/10 flex items-center justify-center text-yellow-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span class="text-[10px] font-bold text-yellow-600 uppercase">Urgent</span>
        </div>
        <p class="text-3xl font-heading font-bold mb-1">23</p>
        <p class="text-[10px] uppercase tracking-widest text-[#1C2A3A]/40 font-bold">
          Pending
        </p>
      </div>
      <div class="bg-white/40 backdrop-blur-xl rounded-[2rem] p-6 border border-white/20 shadow-sm">
        <div class="flex items-center justify-between mb-4">
          <div class="w-10 h-10 rounded-xl bg-green-500/10 flex items-center justify-center text-green-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span class="text-[10px] font-bold text-green-600 uppercase">+24%</span>
        </div>
        <p class="text-3xl font-heading font-bold mb-1">₹48.2K</p>
        <p class="text-[10px] uppercase tracking-widest text-[#1C2A3A]/40 font-bold">
          Revenue
        </p>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 mb-12">
      <div class="lg:col-span-5 space-y-6">
        <div class="bg-white/40 backdrop-blur-xl rounded-[2.5rem] p-8 border border-white/20 shadow-sm h-full">
          <h3 class="text-lg font-heading font-medium mb-8">Quick Actions</h3>
          <div class="grid grid-cols-1 gap-4">
            <a href="/admin/events" class="flex items-center justify-between p-5 rounded-2xl bg-white/30 border border-white/40 hover:bg-[#1C2A3A] hover:text-white transition-all group shadow-sm">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-[#ED8842]/20 flex items-center justify-center text-[#ED8842] group-hover:bg-white/10 group-hover:text-white transition-colors">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                  </svg>
                </div>
                <span class="font-bold text-sm uppercase tracking-widest">Approve Events</span>
              </div>
              <svg class="w-5 h-5 opacity-30 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
            <a href="/admin/users" class="flex items-center justify-between p-5 rounded-2xl bg-white/30 border border-white/40 hover:bg-[#1C2A3A] hover:text-white transition-all group shadow-sm">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-[#1C2A3A]/10 flex items-center justify-center text-[#1C2A3A] group-hover:bg-white/10 group-hover:text-white transition-colors">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                  </svg>
                </div>
                <span class="font-bold text-sm uppercase tracking-widest">Manage Users</span>
              </div>
              <svg class="w-5 h-5 opacity-30 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
            <a href="/admin/categories" class="flex items-center justify-between p-5 rounded-2xl bg-white/30 border border-white/40 hover:bg-[#1C2A3A] hover:text-white transition-all group shadow-sm">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-purple-100 flex items-center justify-center text-purple-600 group-hover:bg-white/10 group-hover:text-white transition-colors">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                  </svg>
                </div>
                <span class="font-bold text-sm uppercase tracking-widest">Categories</span>
              </div>
              <svg class="w-5 h-5 opacity-30 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <div class="lg:col-span-7 space-y-8">
        <div class="p-4 h-[220px] relative">
          <h4 class="text-[10px] font-bold uppercase tracking-widest text-[#1C2A3A]/40 mb-4 ml-4">
            Weekly Revenue
          </h4>
          <canvas id="revenueChart"></canvas>
        </div>
        <div class="p-4 h-[220px] relative">
          <h4 class="text-[10px] font-bold uppercase tracking-widest text-[#1C2A3A]/40 mb-4 ml-4">
            Category Engagement
          </h4>
          <canvas id="categoryChart"></canvas>
        </div>
      </div>
    </div>

    <div class="bg-white/40 backdrop-blur-xl rounded-[2.5rem] p-8 border border-white/20 shadow-sm">
      <h3 class="text-lg font-heading font-medium mb-6">Recent Activity</h3>
      <div class="space-y-4">
        <div class="flex items-start gap-4 pb-4 border-b border-[#1C2A3A]/5">
          <div class="w-10 h-10 rounded-full bg-green-500/10 flex items-center justify-center shrink-0">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium">
              Event "Jazz under the Moonlight" approved
            </p>
            <p class="text-xs text-[#1C2A3A]/60 mt-1">2 minutes ago</p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    Chart.defaults.font.family = "'Inter', sans-serif";
    Chart.defaults.color = "#1C2A3A";

    // 1. Weekly Revenue (Floating Line)
    const revCtx = document.getElementById("revenueChart").getContext("2d");
    new Chart(revCtx, {
      type: "line",
      data: {
        labels: ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
        datasets: [{
          data: [18000, 24000, 19000, 32000, 28000, 45000, 38000],
          borderColor: "#1C2A3A",
          borderWidth: 2.5,
          tension: 0.4,
          pointRadius: 0,
          pointHoverRadius: 6,
          fill: true,
          backgroundColor: "rgba(28, 42, 58, 0.03)",
        }, ],
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false
          }
        },
        scales: {
          x: {
            grid: {
              display: false
            },
            border: {
              display: false
            }
          },
          y: {
            display: false,
            grid: {
              display: false
            }
          },
        },
      },
    });

    // 2. Category Distribution (Clean Bar)
    const catCtx = document.getElementById("categoryChart").getContext("2d");
    new Chart(catCtx, {
      type: "bar",
      data: {
        labels: ["Music", "Tech", "Arts", "Sports", "Food"],
        datasets: [{
          data: [85, 45, 60, 30, 70],
          backgroundColor: "#ED8842",
          borderRadius: 8,
          barThickness: 30,
        }, ],
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false
          }
        },
        scales: {
          x: {
            grid: {
              display: false
            },
            border: {
              display: false
            }
          },
          y: {
            display: false,
            grid: {
              display: false
            }
          },
        },
      },
    });
  </script>
</body>

</html>