<style>
  @keyframes float-doodle {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-30px) rotate(5deg);
    }
  }
  .doodle-animated {
    animation: float-doodle 7s ease-in-out infinite;
    opacity: 0.15; /* Subtle enough to not distract */
  }
  .delay-1 {
    animation-delay: -2s;
  }
  .delay-2 {
    animation-delay: -4s;
  }
</style>

<div
  class="absolute inset-0 pointer-events-none select-none overflow-hidden bg-[#EAE0CF]"
>
  <!-- 1. Music Note (Top Left) -->
  <div class="absolute top-[10%] left-[8%] doodle-animated delay-1">
    <svg
      width="120"
      height="120"
      viewBox="0 0 24 24"
      fill="none"
      stroke="#1C2A3A"
      stroke-width="1.5"
    >
      <path d="M9 18V5l12-2v13"></path>
      <circle cx="6" cy="18" r="3"></circle>
      <circle cx="18" cy="16" r="3"></circle>
    </svg>
  </div>

  <!-- 2. Ticket (Top Right) -->
  <div class="absolute top-[12%] right-[10%] doodle-animated">
    <svg
      width="130"
      height="130"
      viewBox="0 0 24 24"
      fill="none"
      stroke="#1C2A3A"
      stroke-width="1.2"
    >
      <path
        d="M2 9a3 3 0 0 1 0 6v2a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-2a3 3 0 0 1 0-6V7a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2Z"
      ></path>
      <line x1="13" y1="5" x2="13" y2="19" stroke-dasharray="3 3"></line>
    </svg>
  </div>

  <!-- 3. Microphone (Middle Left) -->
  <div class="absolute top-[45%] left-[4%] doodle-animated delay-2">
    <svg
      width="110"
      height="110"
      viewBox="0 0 24 24"
      fill="none"
      stroke="#1C2A3A"
      stroke-width="1.5"
    >
      <rect x="9" y="2" width="6" height="11" rx="3"></rect>
      <path d="M5 10v1a7 7 0 0 0 14 0v-1"></path>
      <line x1="12" y1="18" x2="12" y2="22"></line>
    </svg>
  </div>

  <!-- 4. Party Glass (Bottom Right) -->
  <div class="absolute bottom-[10%] right-[8%] doodle-animated delay-1">
    <svg
      width="120"
      height="120"
      viewBox="0 0 24 24"
      fill="none"
      stroke="#1C2A3A"
      stroke-width="1.2"
    >
      <path d="M6 3h12l-2 8H8l-2-8Z"></path>
      <line x1="12" y1="11" x2="12" y2="21"></line>
      <line x1="8" y1="21" x2="16" y2="21"></line>
    </svg>
  </div>

  <!-- 5. Calendar (Bottom Left) -->
  <div class="absolute bottom-[15%] left-[10%] doodle-animated">
    <svg
      width="110"
      height="110"
      viewBox="0 0 24 24"
      fill="none"
      stroke="#1C2A3A"
      stroke-width="1.5"
    >
      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
      <line x1="16" y1="2" x2="16" y2="6"></line>
      <line x1="8" y1="2" x2="8" y2="6"></line>
      <line x1="3" y1="10" x2="21" y2="10"></line>
    </svg>
  </div>
</div>
