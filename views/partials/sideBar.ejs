<% console.log('Active page received:', locals.activePage) %>
<%
  // Default to 'wallet' if not specified
  const activePage = locals.activePage || 'wallet';
%>
<!-- At the top of sideBar.ejs -->
<aside class="w-64 shrink-0 hidden lg:block h-[calc(100vh-12rem)] sticky top-28">
  <div class="bg-white/40 border border-[#1C2A3A]/5 backdrop-blur-3xl rounded-[2rem] p-6 h-full flex flex-col justify-between shadow-sm">
    <div>
      <!-- User Profile -->
      <div class="flex items-center gap-4 px-2 mb-8">
        <div class="w-12 h-12 rounded-full bg-[#1C2A3A] text-white flex items-center justify-center font-heading text-lg overflow-hidden border-2 border-white shadow-sm">
          <div class="w-full h-full bg-gradient-to-br from-[#ED8842] to-[#2C3E50] flex items-center justify-center">
            <img src="<%= user.avatarUrl %>" alt="Profile" class="w-full h-full object-cover">

          </div>
        </div>
        <div>
          <p class="font-bold text-[#1C2A3A]"><%= user.name || 'User' %></p>
          <p class="text-xs text-[#1C2A3A]/60">Event Host</p>
        </div>
      </div>

      <!-- Navigation -->
      <nav class="space-y-2">
        <a href="/dashboard/myBookings" class="w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all nav-btn <%= activePage === 'bookings' ? 'active' : '' %>">
          <svg class="w-5 h-5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
          </svg>
          <span>My Bookings</span>
        </a>

        <a href="/user/calendar" class="w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all nav-btn <%= activePage === 'calendar' ? 'active' : '' %>">
          <svg class="w-5 h-5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span>Calendar</span>
        </a>

        <a href="/dashboard/hostDashboard" class="w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all nav-btn <%= activePage === 'host' ? 'active' : '' %>">
          <svg class="w-5 h-5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
          <span>Host Dashboard</span>
        </a>

        <a href="/dashboard" class="w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all nav-btn <%= activePage === 'profile' ? 'active' : '' %>">
          <svg class="w-5 h-5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <span>Profile</span>
        </a>

        <a href="/dashboard/wallet" class="w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all nav-btn <%= activePage === 'wallet' ? 'active' : '' %>">
          <svg class="w-5 h-5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
          </svg>
          <span>Wallet</span>
        </a>
      </nav>
    </div>

    <!-- Logout -->
    <div class="mt-8 pt-6 border-t border-[#1C2A3A]/5">
      <a href="/logout">
        <button class="w-full flex items-center space-x-3 px-4 py-3 rounded-xl text-[#1C2A3A]/70 hover:bg-[#F9F7F5] hover:text-[#1C2A3A] transition-all">
          <svg class="w-5 h-5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>

          <span>Log Out</span>
        </button>
      </a>
    </div>
  </div>
</aside>